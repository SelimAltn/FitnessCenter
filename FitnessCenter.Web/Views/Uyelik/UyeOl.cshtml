@model FitnessCenter.Web.Models.ViewModels.UyelikOlViewModel

@{
    ViewData["Title"] = "Üye Ol";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <div>
                <h1>Yeni Şubeye Üye Ol</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Üyeliklerim</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Üye Ol</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card-fc">
                <div class="card-header d-flex align-items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="8.5" cy="7" r="4"></circle>
                        <line x1="20" y1="8" x2="20" y2="14"></line>
                        <line x1="23" y1="11" x2="17" y2="11"></line>
                    </svg>
                    Üyelik Bilgileri
                </div>
                <div class="card-body">
                    <form asp-action="UyeOl" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert-fc alert-fc-danger mb-4"></div>

                        <!-- Şube Seçimi -->
                        <div class="form-fc-group">
                            <label asp-for="SalonId" class="form-fc-label">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                </svg>
                                Şube Seçimi
                            </label>
                            <select asp-for="SalonId" asp-items="@(ViewData["SalonId"] as SelectList)" class="form-fc-control">
                                <option value="">Şube seçiniz</option>
                            </select>
                            <span class="form-fc-hint">Üye olmak istediğiniz spor salonu şubesini seçin</span>
                            <span asp-validation-for="SalonId" class="form-fc-error"></span>
                        </div>

                        <!-- Ad Soyad -->
                        <div class="form-fc-group">
                            <label asp-for="AdSoyad" class="form-fc-label">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                                Ad Soyad
                            </label>
                            <input asp-for="AdSoyad" class="form-fc-control" placeholder="Adınızı ve soyadınızı girin" />
                            <span asp-validation-for="AdSoyad" class="form-fc-error"></span>
                        </div>

                        <!-- Telefon -->
                        <div class="form-fc-group">
                            <label asp-for="Telefon" class="form-fc-label">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                                    <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                                </svg>
                                Telefon Numarası
                            </label>
                            <input asp-for="Telefon" class="form-fc-control" placeholder="05XX XXX XX XX" />
                            <span class="form-fc-hint">Size ulaşabileceğimiz telefon numaranızı girin</span>
                            <span asp-validation-for="Telefon" class="form-fc-error"></span>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex gap-3 pt-3">
                            <button type="submit" class="btn-fc btn-fc-success btn-fc-lg">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                                </svg>
                                Üyeliği Başlat
                            </button>
                            <a asp-action="Index" class="btn-fc btn-fc-secondary btn-fc-lg">
                                Vazgeç
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Card -->
            <div class="card-fc mt-4">
                <div class="card-body">
                    <div class="d-flex gap-3">
                        <div class="flex-shrink-0">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-info-fc">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="12" y1="16" x2="12" y2="12"></line>
                                <line x1="12" y1="8" x2="12.01" y2="8"></line>
                            </svg>
                        </div>
                        <div>
                            <h4 class="mb-2" style="font-size: 1rem;">Üyelik Hakkında</h4>
                            <p class="text-muted-fc mb-0" style="font-size: 0.875rem;">
                                Üyelik başvurunuz onaylandıktan sonra seçtiğiniz şubede randevu alabilir ve antrenman programlarına katılabilirsiniz.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
