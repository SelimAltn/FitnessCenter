@model IEnumerable<FitnessCenter.Web.Models.Entities.Uyelik>

@{
    ViewData["Title"] = "Üyeliklerim";
}

<!-- Toast Data for JS -->
@if (TempData["Success"] != null)
{
    <div data-toast-message="@TempData["Success"]" data-toast-type="success" style="display:none;"></div>
}
@if (TempData["Error"] != null)
{
    <div data-toast-message="@TempData["Error"]" data-toast-type="danger" style="display:none;"></div>
}
@if (ViewBag.Mesaj != null)
{
    <div data-toast-message="@ViewBag.Mesaj" data-toast-type="info" style="display:none;"></div>
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <div>
                <h1>Üyeliklerim</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Üyeliklerim</li>
                    </ol>
                </nav>
            </div>
            <div class="page-header-actions">
                <a asp-action="UyeOl" class="btn-fc btn-fc-primary btn-fc-lg">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                    Yeni Şubeye Üye Ol
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    @if (!Model.Any())
    {
        <!-- Empty State -->
        <div class="card-fc">
            <div class="card-body">
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                            <circle cx="9" cy="7" r="4"></circle>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                        </svg>
                    </div>
                    <h3 class="empty-state-title">Henüz üyeliğiniz yok</h3>
                    <p class="empty-state-text">
                        Spor salonlarımıza üye olarak antrenman programlarına katılabilir ve randevu alabilirsiniz.
                    </p>
                    <a asp-action="UyeOl" class="btn-fc btn-fc-primary btn-fc-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="12" y1="5" x2="12" y2="19"></line>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                        İlk Üyeliğinizi Başlatın
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Memberships Table -->
        <div class="card-fc">
            <div class="card-header d-flex align-items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                    <line x1="1" y1="10" x2="23" y2="10"></line>
                </svg>
                Üyeliklerim
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table-fc">
                        <thead>
                            <tr>
                                <th>Şube</th>
                                <th>Başlangıç Tarihi</th>
                                <th>Bitiş Tarihi</th>
                                <th>Durum</th>
                                <th style="width: 150px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var u in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <span class="d-inline-flex align-items-center justify-content-center rounded-circle bg-light-fc" style="width: 36px; height: 36px;">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary-fc">
                                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                                </svg>
                                            </span>
                                            <strong>@u.Salon.Ad</strong>
                                        </div>
                                    </td>
                                    <td>@u.BaslangicTarihi.ToString("dd MMM yyyy")</td>
                                    <td>@(u.BitisTarihi?.ToString("dd MMM yyyy") ?? "—")</td>
                                    <td>
                                        @if (u.Durum == "Aktif")
                                        {
                                            <span class="badge-fc badge-fc-success">Aktif</span>
                                        }
                                        else if (u.Durum == "Pasif" || u.Durum == "Süresi Doldu" || u.Durum == "İptal")
                                        {
                                            <span class="badge-fc badge-fc-secondary">@u.Durum</span>
                                        }
                                        else if (u.Durum == "Beklemede")
                                        {
                                            <span class="badge-fc badge-fc-warning">Beklemede</span>
                                        }
                                        else
                                        {
                                            <span class="badge-fc badge-fc-info">@u.Durum</span>
                                        }
                                    </td>
                                    <td>
                                        @if (u.Durum == "Aktif")
                                        {
                                            <button type="button" class="btn-fc btn-fc-danger btn-fc-sm" 
                                                    onclick="showIptalModal(@u.Id, '@u.Salon.Ad')">
                                                İptal Et
                                            </button>
                                        }
                                        else
                                        {
                                            <span class="text-muted-fc">—</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

<!-- İptal Modal -->
<div class="modal fade" id="iptalModal" tabindex="-1" aria-labelledby="iptalModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="iptalModalLabel">Üyelik İptali</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <p>Bu üyeliği iptal etmek istediğinize emin misiniz?</p>
                <p class="text-muted mb-0"><strong id="iptalUyelikBilgi"></strong> şubesindeki üyeliğiniz iptal edilecektir.</p>
                <div class="alert-fc alert-fc-warning mt-3 py-2">
                    <small>
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="16" x2="12" y2="12"/>
                            <line x1="12" y1="8" x2="12.01" y2="8"/>
                        </svg>
                        İptal edilen üyelikler geri alınamaz.
                    </small>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-fc btn-fc-secondary" data-bs-dismiss="modal">Vazgeç</button>
                <form asp-action="IptalEt" method="post" class="d-inline">
                    <input type="hidden" name="id" id="iptalUyelikId" />
                    <button type="submit" class="btn-fc btn-fc-danger">Evet, İptal Et</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showIptalModal(id, subeAdi) {
            document.getElementById('iptalUyelikId').value = id;
            document.getElementById('iptalUyelikBilgi').textContent = subeAdi;
            var modal = new bootstrap.Modal(document.getElementById('iptalModal'));
            modal.show();
        }
    </script>
}
