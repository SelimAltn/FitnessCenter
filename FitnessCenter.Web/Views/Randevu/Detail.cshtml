@model FitnessCenter.Web.Models.Entities.Randevu

@{
    ViewData["Title"] = "Randevu Detayı";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <div>
                <h1>Randevu Detayı</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-action="Index">Randevularım</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Detay</li>
                    </ol>
                </nav>
            </div>
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn-fc btn-fc-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="15 18 9 12 15 6"/></svg>
                    Geri
                </a>
                @if (Model.Durum != "İptal")
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-fc btn-fc-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/></svg>
                        Düzenle
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card-fc">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                        Randevu Bilgileri
                    </span>
                    @if (Model.Durum == "Onaylandı")
                    {
                        <span class="badge-fc badge-fc-success">Onaylandı</span>
                    }
                    else if (Model.Durum == "Beklemede")
                    {
                        <span class="badge-fc badge-fc-warning">Beklemede</span>
                    }
                    else
                    {
                        <span class="badge-fc badge-fc-danger">İptal</span>
                    }
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-fc-label">Tarih</label>
                            <div class="form-fc-static">
                                <strong>@Model.BaslangicZamani.ToString("dd MMMM yyyy, dddd")</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-fc-label">Saat</label>
                            <div class="form-fc-static">
                                <strong>@Model.BaslangicZamani.ToString("HH:mm") - @Model.BitisZamani.ToString("HH:mm")</strong>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-fc-label">Şube</label>
                            <div class="form-fc-static">@Model.Salon?.Ad</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-fc-label">Hizmet</label>
                            <div class="form-fc-static">@Model.Hizmet?.Ad</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-fc-label">Eğitmen</label>
                            <div class="form-fc-static">@Model.Egitmen?.AdSoyad</div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-fc-label">Süre</label>
                            <div class="form-fc-static">@Model.Hizmet?.SureDakika dakika</div>
                        </div>
                    </div>

                    @if (Model.Durum == "Beklemede")
                    {
                        <div class="alert-fc alert-fc-info mt-4 py-2">
                            <small>
                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-1"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                                Bu randevu admin onayı bekliyor.
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
