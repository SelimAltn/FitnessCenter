@model IEnumerable<FitnessCenter.Web.Models.Entities.Randevu>

@{
    ViewData["Title"] = "Randevularım";
    var seciliTarih = ViewData["SeciliTarih"] as string;
    var uyeId = Model.FirstOrDefault()?.UyeId ?? 0;
}

<!-- Toast Data for JS (hidden, will be converted to toasts) -->
@if (TempData["Success"] != null)
{
    <div data-toast-message="@TempData["Success"]" data-toast-type="success" style="display:none;"></div>
}
@if (TempData["Error"] != null)
{
    <div data-toast-message="@TempData["Error"]" data-toast-type="danger" style="display:none;"></div>
}
@if (TempData["Info"] != null)
{
    <div data-toast-message="@TempData["Info"]" data-toast-type="info" style="display:none;"></div>
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <div>
                <h1>Randevularım</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Randevularım</li>
                    </ol>
                </nav>
            </div>
            <div class="page-header-actions">
                <a asp-action="Create" class="btn-fc btn-fc-primary btn-fc-lg">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                    Yeni Randevu
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <!-- Filter Bar -->
    <div class="filter-bar">
        <div class="filter-bar-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2">
                <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
            </svg>
            Filtreler
        </div>
        <form method="get">
            <div class="filter-bar-grid">
                <div class="form-fc-group mb-0">
                    <label class="form-fc-label">Tarih</label>
                    <input type="date" name="tarih" value="@seciliTarih" class="form-fc-control" />
                </div>

                <div class="form-fc-group mb-0">
                    <label class="form-fc-label">Eğitmen</label>
                    <select name="egitmenId" class="form-fc-control" asp-items="@(ViewData["EgitmenId"] as SelectList)">
                        <option value="">Tümü</option>
                    </select>
                </div>

                <div class="form-fc-group mb-0">
                    <label class="form-fc-label">Hizmet</label>
                    <select name="hizmetId" class="form-fc-control" asp-items="@(ViewData["HizmetId"] as SelectList)">
                        <option value="">Tümü</option>
                    </select>
                </div>

                <div class="filter-bar-actions">
                    <button type="submit" class="btn-fc btn-fc-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="11" cy="11" r="8"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                        </svg>
                        Filtrele
                    </button>
                    <a asp-action="Index" class="btn-fc btn-fc-secondary">Temizle</a>
                </div>
            </div>
        </form>
    </div>

    <!-- Content -->
    @if (!Model.Any())
    {
        <!-- Empty State -->
        <div class="card-fc">
            <div class="card-body">
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                            <line x1="16" y1="2" x2="16" y2="6"></line>
                            <line x1="8" y1="2" x2="8" y2="6"></line>
                            <line x1="3" y1="10" x2="21" y2="10"></line>
                        </svg>
                    </div>
                    <h3 class="empty-state-title">Henüz randevunuz yok</h3>
                    <p class="empty-state-text">
                        Spor eğitmenlerimizle randevu oluşturarak sağlıklı yaşam yolculuğunuza başlayın.
                    </p>
                    <a asp-action="Create" class="btn-fc btn-fc-primary btn-fc-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <line x1="12" y1="5" x2="12" y2="19"></line>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                        İlk Randevunuzu Oluşturun
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Appointments Table -->
        <div class="card-fc">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table-fc table-fc-sticky">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>Saat</th>
                                <th>Salon</th>
                                <th>Hizmet</th>
                                <th>Eğitmen</th>
                                <th>Durum</th>
                                <th style="width: 120px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@r.BaslangicZamani.ToString("dd MMM yyyy")</strong>
                                    </td>
                                    <td>
                                        @r.BaslangicZamani.ToString("HH:mm") - @r.BitisZamani.ToString("HH:mm")
                                    </td>
                                    <td>@r.Salon?.Ad</td>
                                    <td>@r.Hizmet?.Ad</td>
                                    <td>@r.Egitmen?.AdSoyad</td>
                                    <td>
                                        @if (r.Durum == "Onaylandı")
                                        {
                                            <span class="badge-fc badge-fc-success">Onaylandı</span>
                                        }
                                        else if (r.Durum == "İptal")
                                        {
                                            <span class="badge-fc badge-fc-danger">İptal</span>
                                        }
                                        else
                                        {
                                            <span class="badge-fc badge-fc-warning">Beklemede</span>
                                        }
                                    </td>
                                    <td>
                                        @if (r.Durum != "İptal")
                                        {
                                            <form asp-action="IptalEt" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@r.Id" />
                                                <button type="submit" 
                                                        class="btn-fc btn-fc-danger btn-fc-sm"
                                                        data-confirm="Bu randevuyu iptal etmek istediğinize emin misiniz?"
                                                        data-confirm-title="Randevu İptali"
                                                        data-confirm-text="Evet, İptal Et">
                                                    İptal Et
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- API Data Section -->
        <div class="card-fc mt-4">
            <div class="card-header d-flex align-items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
                </svg>
                Randevularım (API'den Gelen)
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table-fc" id="apiRandevuTable">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>Başlangıç</th>
                                <th>Bitiş</th>
                                <th>Hizmet</th>
                                <th>Eğitmen</th>
                                <th>Salon</th>
                                <th>Durum</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="7" class="text-center text-muted-fc py-4">
                                    <div class="spinner-border spinner-border-sm me-2" role="status">
                                        <span class="visually-hidden">Yükleniyor...</span>
                                    </div>
                                    Veriler yükleniyor...
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(function () {
            var uyeId = @uyeId;

            if (!uyeId || uyeId === 0) {
                console.warn("API için üye Id bulunamadı.");
                return;
            }

            $.ajax({
                url: '/api/members/' + uyeId + '/appointments',
                method: 'GET',
                success: function (response) {
                    var rows = "";

                    if (!response.items || response.items.length === 0) {
                        rows = '<tr><td colspan="7" class="text-center text-muted-fc py-4">Bu üyeye ait randevu bulunamadı.</td></tr>';
                    } else {
                        response.items.forEach(function (item) {
                            var baslangic = new Date(item.baslangicZamani);
                            var bitis = new Date(item.bitisZamani);
                            
                            var durumBadge = '';
                            if (item.durum === 'Onaylandı') {
                                durumBadge = '<span class="badge-fc badge-fc-success">Onaylandı</span>';
                            } else if (item.durum === 'İptal') {
                                durumBadge = '<span class="badge-fc badge-fc-danger">İptal</span>';
                            } else {
                                durumBadge = '<span class="badge-fc badge-fc-warning">Beklemede</span>';
                            }

                            rows += `
                                <tr>
                                    <td><strong>${baslangic.toLocaleDateString('tr-TR')}</strong></td>
                                    <td>${baslangic.toLocaleTimeString('tr-TR', {hour: '2-digit', minute:'2-digit'})}</td>
                                    <td>${bitis.toLocaleTimeString('tr-TR', {hour: '2-digit', minute:'2-digit'})}</td>
                                    <td>${item.hizmetAdi}</td>
                                    <td>${item.egitmenAdSoyad}</td>
                                    <td>${item.salonAdi}</td>
                                    <td>${durumBadge}</td>
                                </tr>`;
                        });
                    }

                    $("#apiRandevuTable tbody").html(rows);
                },
                error: function () {
                    $("#apiRandevuTable tbody").html(
                        '<tr><td colspan="7" class="text-center text-danger-fc py-4">Randevular yüklenirken bir hata oluştu.</td></tr>'
                    );
                }
            });
        });
    </script>
}
