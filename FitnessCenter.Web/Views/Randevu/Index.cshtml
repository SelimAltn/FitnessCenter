@model IEnumerable<FitnessCenter.Web.Models.Entities.Randevu>

@{
    ViewData["Title"] = "Randevularım";
    var seciliTarih = ViewData["SeciliTarih"] as string;
}

<!-- Toast Data for JS (hidden, will be converted to toasts) -->
@if (TempData["Success"] != null)
{
    <div data-toast-message="@TempData["Success"]" data-toast-type="success" style="display:none;"></div>
}
@if (TempData["Error"] != null)
{
    <div data-toast-message="@TempData["Error"]" data-toast-type="danger" style="display:none;"></div>
}
@if (TempData["Info"] != null)
{
    <div data-toast-message="@TempData["Info"]" data-toast-type="info" style="display:none;"></div>
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <div>
                <h1>Randevularım</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Randevularım</li>
                    </ol>
                </nav>
            </div>
            <div class="page-header-actions">
                <a asp-action="Create" class="btn-fc btn-fc-primary btn-fc-lg">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                    Yeni Randevu
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <!-- Filter Bar -->
    <div class="filter-bar">
        <div class="filter-bar-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2">
                <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
            </svg>
            Filtreler
        </div>
        <form method="get">
            <div class="filter-bar-grid">
                <div class="form-fc-group mb-0">
                    <label class="form-fc-label">Tarih</label>
                    <input type="date" name="tarih" value="@seciliTarih" class="form-fc-control" />
                </div>

                <div class="form-fc-group mb-0">
                    <label class="form-fc-label">Eğitmen</label>
                    <select name="egitmenId" class="form-fc-control" asp-items="@(ViewData["EgitmenId"] as SelectList)">
                        <option value="">Tümü</option>
                    </select>
                </div>

                <div class="form-fc-group mb-0">
                    <label class="form-fc-label">Hizmet</label>
                    <select name="hizmetId" class="form-fc-control" asp-items="@(ViewData["HizmetId"] as SelectList)">
                        <option value="">Tümü</option>
                    </select>
                </div>

                <div class="filter-bar-actions">
                    <button type="submit" class="btn-fc btn-fc-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="11" cy="11" r="8"></circle>
                            <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                        </svg>
                        Filtrele
                    </button>
                    <a asp-action="Index" class="btn-fc btn-fc-secondary">Temizle</a>
                </div>
            </div>
        </form>
    </div>

    <!-- Appointments Table -->
    <div class="card-fc">
        <div class="card-header d-flex align-items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
            Randevularım
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table-fc table-fc-sticky" id="randevuTable">
                    <thead>
                        <tr>
                            <th>Tarih</th>
                            <th>Saat</th>
                            <th>Salon</th>
                            <th>Hizmet</th>
                            <th>Eğitmen</th>
                            <th>Durum</th>
                            <th style="width: 180px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5">
                                    <div class="empty-state">
                                        <div class="empty-state-icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                                <line x1="3" y1="10" x2="21" y2="10"></line>
                                            </svg>
                                        </div>
                                        <h3 class="empty-state-title">Randevu bulunamadı</h3>
                                        <p class="empty-state-text">Seçtiğiniz kriterlere uygun randevu bulunmuyor veya henüz randevunuz yok.</p>
                                        <a href="/Randevu/Create" class="btn-fc btn-fc-primary btn-fc-lg">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <line x1="12" y1="5" x2="12" y2="19"></line>
                                                <line x1="5" y1="12" x2="19" y2="12"></line>
                                            </svg>
                                            Yeni Randevu Oluştur
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                var durumBadge = item.Durum switch
                                {
                                    "Onaylandı" => "badge-fc-success",
                                    "İptal" => "badge-fc-danger",
                                    "Yapıldı" => "badge-fc-info",
                                    _ => "badge-fc-warning"
                                };
                                <tr>
                                    <td><strong>@item.BaslangicZamani.ToString("dd MMM yyyy")</strong></td>
                                    <td>@item.BaslangicZamani.ToString("HH:mm") - @item.BitisZamani.ToString("HH:mm")</td>
                                    <td>@item.Salon?.Ad</td>
                                    <td>@item.Hizmet?.Ad</td>
                                    <td>@item.Egitmen?.AdSoyad</td>
                                    <td><span class="badge-fc @durumBadge">@item.Durum</span></td>
                                    <td>
                                        @if (item.Durum != "İptal" && item.Durum != "Yapıldı")
                                        {
                                            <div class="d-flex gap-1 flex-wrap">
                                                <a href="/Randevu/Detail/@item.Id" class="btn-fc btn-fc-info btn-fc-sm">Detay</a>
                                                <a href="/Randevu/Edit/@item.Id" class="btn-fc btn-fc-secondary btn-fc-sm">Düzenle</a>
                                                <button type="button" class="btn-fc btn-fc-danger btn-fc-sm"
                                                        onclick="showIptalModal(@item.Id, '@item.BaslangicZamani.ToString("dd.MM.yyyy HH:mm") - @item.Hizmet?.Ad')">
                                                    İptal
                                                </button>
                                            </div>
                                        }
                                        else
                                        {
                                            <a href="/Randevu/Detail/@item.Id" class="btn-fc btn-fc-info btn-fc-sm">Detay</a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- İptal Modal -->
<div class="modal fade" id="iptalModal" tabindex="-1" aria-labelledby="iptalModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="iptalModalLabel">Randevu İptali</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <p>Bu randevuyu iptal etmek istediğinize emin misiniz?</p>
                <p class="text-muted mb-0" id="iptalRandevuBilgi"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-fc btn-fc-secondary" data-bs-dismiss="modal">Vazgeç</button>
                <form asp-action="IptalEt" method="post" class="d-inline">
                    <input type="hidden" name="id" id="iptalRandevuId" />
                    <button type="submit" class="btn-fc btn-fc-danger">Evet, İptal Et</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function showIptalModal(id, bilgi) {
            document.getElementById('iptalRandevuId').value = id;
            document.getElementById('iptalRandevuBilgi').textContent = bilgi;
            var modal = new bootstrap.Modal(document.getElementById('iptalModal'));
            modal.show();
        }
    </script>
}
