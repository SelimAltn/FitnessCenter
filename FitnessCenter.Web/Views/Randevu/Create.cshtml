@model FitnessCenter.Web.Models.Entities.Randevu

@{
    ViewData["Title"] = "Yeni Randevu";
}

<!-- Toast Data for JS -->
@if (TempData["Error"] != null)
{
    <div data-toast-message="@TempData["Error"]" data-toast-type="danger" style="display:none;"></div>
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <div>
                <h1>Yeni Randevu</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Randevularım</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Yeni Randevu</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card-fc">
                <div class="card-header d-flex align-items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                        <line x1="12" y1="14" x2="12" y2="18"></line>
                        <line x1="10" y1="16" x2="14" y2="16"></line>
                    </svg>
                    Randevu Bilgileri
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert-fc alert-fc-danger mb-4"></div>

                        <!-- Salon -->
                        <div class="form-fc-group">
                            <label asp-for="SalonId" class="form-fc-label">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                </svg>
                                Salon Seçimi
                            </label>
                            <select asp-for="SalonId"
                                    asp-items="@(ViewData["SalonId"] as SelectList)"
                                    class="form-fc-control">
                                <option value="">Salon seçiniz</option>
                            </select>
                            <span asp-validation-for="SalonId" class="form-fc-error"></span>
                        </div>

                        <!-- Hizmet -->
                        <div class="form-fc-group">
                            <label asp-for="HizmetId" class="form-fc-label">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                                    <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
                                    <polyline points="14 2 14 8 20 8"></polyline>
                                    <line x1="16" y1="13" x2="8" y2="13"></line>
                                    <line x1="16" y1="17" x2="8" y2="17"></line>
                                    <polyline points="10 9 9 9 8 9"></polyline>
                                </svg>
                                Hizmet Türü
                            </label>
                            <select asp-for="HizmetId"
                                    asp-items="@(ViewData["HizmetId"] as SelectList)"
                                    class="form-fc-control">
                                <option value="">Hizmet seçiniz</option>
                            </select>
                            <span asp-validation-for="HizmetId" class="form-fc-error"></span>
                        </div>

                        <!-- Başlangıç Zamanı -->
                        <div class="form-fc-group">
                            <label asp-for="BaslangicZamani" class="form-fc-label">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <polyline points="12 6 12 12 16 14"></polyline>
                                </svg>
                                Başlangıç Zamanı
                            </label>
                            <input asp-for="BaslangicZamani"
                                   id="BaslangicZamaniPicker"
                                   class="form-fc-control"
                                   type="text"
                                   placeholder="Tarih ve saat seçiniz" />
                            <input type="hidden" id="BaslangicZamani" name="BaslangicZamani" />
                            <span class="form-fc-hint">Randevunuzun başlayacağı tarih ve saati seçin</span>
                            <span asp-validation-for="BaslangicZamani" class="form-fc-error"></span>
                        </div>

                        <!-- Eğitmen -->
                        <div class="form-fc-group">
                            <label asp-for="EgitmenId" class="form-fc-label">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                                Eğitmen
                            </label>
                            <select id="EgitmenId" name="EgitmenId" class="form-fc-control" disabled>
                                <option value="">Önce şube, hizmet ve tarih/saat seçiniz</option>
                            </select>
                            <span id="egitmenHint" class="form-fc-hint">Şube, hizmet ve tarih seçtiğinizde müsait eğitmenler listelenecektir</span>
                            <span asp-validation-for="EgitmenId" class="form-fc-error"></span>
                        </div>

                        <!-- Notlar -->
                        <div class="form-fc-group">
                            <label asp-for="Notlar" class="form-fc-label">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-1">
                                    <line x1="21" y1="10" x2="3" y2="10"></line>
                                    <line x1="21" y1="6" x2="3" y2="6"></line>
                                    <line x1="21" y1="14" x2="3" y2="14"></line>
                                    <line x1="21" y1="18" x2="3" y2="18"></line>
                                </svg>
                                Notlar (Opsiyonel)
                            </label>
                            <textarea asp-for="Notlar" class="form-fc-control" rows="3" placeholder="Eğitmeninize iletmek istediğiniz notları yazabilirsiniz..."></textarea>
                            <span asp-validation-for="Notlar" class="form-fc-error"></span>
                        </div>

                        <!-- Actions -->
                        <div class="d-flex gap-3 pt-3">
                            <button type="submit" class="btn-fc btn-fc-primary btn-fc-lg">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                                </svg>
                                Randevu Talebi Oluştur
                            </button>
                            <a asp-action="Index" class="btn-fc btn-fc-secondary btn-fc-lg">
                                İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Flatpickr CSS & JS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/dark.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/tr.js"></script>

    <script>
        $(function () {
            var flatpickrInstance = null;
            var hiddenInput = document.getElementById('BaslangicZamani');

            // Flatpickr initialization
            flatpickrInstance = flatpickr("#BaslangicZamaniPicker", {
                enableTime: true,
                dateFormat: "d/m/Y H:i",
                altInput: false,
                time_24hr: true,
                locale: "tr",
                minDate: "today",
                defaultHour: 10,
                defaultMinute: 0,
                onChange: function(selectedDates, dateStr, instance) {
                    if (selectedDates.length > 0) {
                        // Hidden input'a ISO format yaz (backend için)
                        var isoDate = selectedDates[0].toISOString().slice(0, 16);
                        hiddenInput.value = selectedDates[0].toISOString();
                        updateEgitmenler();
                    }
                }
            });

            // Sayfa yüklendiğinde default tarih/saat al
            function loadDefaultDateTime() {
                var salonId = $("#SalonId").val();
                $.ajax({
                    url: '/Randevu/GetDefaultDateTime',
                    method: 'GET',
                    data: { salonId: salonId || null },
                    success: function (response) {
                        if (response.start && flatpickrInstance) {
                            flatpickrInstance.setDate(response.start, true);
                            hiddenInput.value = new Date(response.start).toISOString();
                        }
                    },
                    error: function () {
                        // Fallback: 3 saat sonrası
                        var defaultDate = new Date();
                        defaultDate.setHours(defaultDate.getHours() + 3);
                        if (flatpickrInstance) {
                            flatpickrInstance.setDate(defaultDate, true);
                            hiddenInput.value = defaultDate.toISOString();
                        }
                    }
                });
            }

            // Eğitmen listesini güncelle
            function updateEgitmenler() {
                var salonId = $("#SalonId").val();
                var hizmetId = $("#HizmetId").val();
                var tarihValue = hiddenInput.value;

                var $egitmenSelect = $("#EgitmenId");
                var $egitmenHint = $("#egitmenHint");

                // 3 alan dolu değilse eğitmen dropdown boş ve disabled
                if (!salonId || !hizmetId || !tarihValue) {
                    $egitmenSelect
                        .empty()
                        .prop('disabled', true)
                        .append('<option value="">Önce şube, hizmet ve tarih/saat seçiniz</option>');
                    $egitmenHint.text('Şube, hizmet ve tarih seçtiğinizde müsait eğitmenler listelenecektir');
                    return;
                }

                // 3 alan dolu - eğitmenleri yükle
                $egitmenSelect.empty().append('<option>Yükleniyor...</option>');
                $egitmenHint.text('Müsait eğitmenler yükleniyor...');

                $.ajax({
                    url: '/api/trainers',
                    method: 'GET',
                    data: { 
                        salonId: salonId,
                        hizmetId: hizmetId,
                        start: tarihValue
                    },
                    success: function (response) {
                        $egitmenSelect.empty().prop('disabled', false);

                        if (!response.items || response.items.length === 0) {
                            $egitmenSelect
                                .prop('disabled', true)
                                .append('<option value="">Bu kriterlere uygun eğitmen bulunamadı</option>');
                            $egitmenHint.text('Farklı bir tarih/saat veya hizmet seçmeyi deneyin');
                            return;
                        }

                        $egitmenSelect.append('<option value="">Eğitmen seçiniz</option>');

                        response.items.forEach(function (trainer) {
                            var text = trainer.adSoyad;
                            if (trainer.uzmanlik) {
                                text += ' (' + trainer.uzmanlik + ')';
                            }
                            $egitmenSelect.append(
                                $('<option>', {
                                    value: trainer.id,
                                    text: text
                                })
                            );
                        });

                        $egitmenHint.text(response.items.length + ' müsait eğitmen bulundu');
                    },
                    error: function () {
                        $egitmenSelect
                            .empty()
                            .prop('disabled', true)
                            .append('<option>Hata oluştu</option>');
                        $egitmenHint.text('Eğitmenler yüklenirken bir hata oluştu');
                        
                        if (window.FitnessCenter && window.FitnessCenter.toast) {
                            window.FitnessCenter.toast.show('Eğitmenler yüklenirken bir hata oluştu.', 'danger');
                        }
                    }
                });
            }

            // Salon değiştiğinde
            $("#SalonId").on("change", function () {
                // Default tarihi yeniden hesapla
                loadDefaultDateTime();
                // Eğitmenleri güncelle (tarih hesaplandıktan sonra)
                setTimeout(updateEgitmenler, 300);
            });

            // Hizmet değiştiğinde
            $("#HizmetId").on("change", function () {
                updateEgitmenler();
            });

            // Sayfa ilk yüklendiğinde default tarih al
            loadDefaultDateTime();
        });
    </script>
}
