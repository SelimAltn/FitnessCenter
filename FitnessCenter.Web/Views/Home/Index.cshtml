<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2>Neden Fitness Center?</h2>
            <p class="text-muted-fc">Size en iyi hizmeti sunmak için buradayız</p>
        </div>
        
        <div class="row g-4">
            <!-- Feature 1 -->
            <div class="col-md-6 col-lg-3">
                <div class="card-fc h-100">
                    <div class="card-body text-center p-4">
                        <div class="mb-4">
                            <span class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 70px; height: 70px; background: linear-gradient(135deg, var(--fc-primary-light), var(--fc-primary)); color: white;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                            </span>
                        </div>
                        <h4>Profesyonel Eğitmenler</h4>
                        <p class="text-muted-fc mb-0">
                            Alanında uzman, sertifikalı eğitmenlerimizle hedeflerinize ulaşın.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Feature 2 -->
            <div class="col-md-6 col-lg-3">
                <div class="card-fc h-100">
                    <div class="card-body text-center p-4">
                        <div class="mb-4">
                            <span class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 70px; height: 70px; background: linear-gradient(135deg, var(--fc-success-light), var(--fc-success)); color: white;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                    <line x1="16" y1="2" x2="16" y2="6"></line>
                                    <line x1="8" y1="2" x2="8" y2="6"></line>
                                    <line x1="3" y1="10" x2="21" y2="10"></line>
                                </svg>
                            </span>
                        </div>
                        <h4>Kolay Randevu</h4>
                        <p class="text-muted-fc mb-0">
                            Online randevu sistemiyle dilediğiniz zaman kolayca randevu alın.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Feature 3 -->
            <div class="col-md-6 col-lg-3">
                <div class="card-fc h-100">
                    <div class="card-body text-center p-4">
                        <div class="mb-4">
                            <span class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 70px; height: 70px; background: linear-gradient(135deg, var(--fc-info-light), var(--fc-info)); color: white;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M12 2a10 10 0 1 0 10 10"></path>
                                    <path d="M12 12l8-8"></path>
                                    <path d="M12 2v10h10"></path>
                                </svg>
                            </span>
                        </div>
                        <h4>AI Akıllı Öneri</h4>
                        <p class="text-muted-fc mb-0">
                            Yapay zeka ile kişisel antrenman ve beslenme önerileri alın.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Feature 4 -->
            <div class="col-md-6 col-lg-3">
                <div class="card-fc h-100">
                    <div class="card-body text-center p-4">
                        <div class="mb-4">
                            <span class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 70px; height: 70px; background: linear-gradient(135deg, var(--fc-warning-light), var(--fc-warning)); color: white;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                </svg>
                            </span>
                        </div>
                        <h4>Modern Tesisler</h4>
                        <p class="text-muted-fc mb-0">
                            Son teknoloji ekipmanlarla donatılmış ferah spor salonları.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="testimonials-section">
    <div class="container">
        <h2>Üyelerimiz Ne Diyor?</h2>
        <p class="section-subtitle">Binlerce mutlu üyemizden bazıları</p>
        
        <div class="testimonial-slider" id="testimonialSlider">
            <!-- Slide 1 -->
            <div class="testimonial-slide active">
                <div class="testimonial-card">
                    <div class="testimonial-avatar">AY</div>
                    <div class="testimonial-stars">★★★★★</div>
                    <p class="testimonial-text">
                        "FitnessCenter sayesinde 6 ayda 15 kilo verdim. Eğitmenler çok profesyonel ve programlar tam da bana göre hazırlandı."
                    </p>
                    <div class="testimonial-name">Ahmet Yılmaz</div>
                    <div class="testimonial-role">2 yıldır üye</div>
                </div>
            </div>
            
            <!-- Slide 2 -->
            <div class="testimonial-slide">
                <div class="testimonial-card">
                    <div class="testimonial-avatar">ZK</div>
                    <div class="testimonial-stars">★★★★★</div>
                    <p class="testimonial-text">
                        "AI öneri sistemi harika! Bana özel beslenme ve antrenman programı oluşturdu. Sonuçları hızla görmeye başladım."
                    </p>
                    <div class="testimonial-name">Zeynep Kaya</div>
                    <div class="testimonial-role">1 yıldır üye</div>
                </div>
            </div>
            
            <!-- Slide 3 -->
            <div class="testimonial-slide">
                <div class="testimonial-card">
                    <div class="testimonial-avatar">MD</div>
                    <div class="testimonial-stars">★★★★★</div>
                    <p class="testimonial-text">
                        "Randevu sistemi çok kolay. Telefondan anında randevu alıyorum ve eğitmenim hemen hatırlatma gönderiyor."
                    </p>
                    <div class="testimonial-name">Mehmet Demir</div>
                    <div class="testimonial-role">6 aydır üye</div>
                </div>
            </div>
            
            <!-- Slide 4 -->
            <div class="testimonial-slide">
                <div class="testimonial-card">
                    <div class="testimonial-avatar">EA</div>
                    <div class="testimonial-stars">★★★★★</div>
                    <p class="testimonial-text">
                        "Tesisler çok temiz ve modern. Grup derslerini çok seviyorum, motivasyonum her zaman yüksek!"
                    </p>
                    <div class="testimonial-name">Elif Aksoy</div>
                    <div class="testimonial-role">3 yıldır üye</div>
                </div>
            </div>
        </div>
        
        <div class="testimonial-dots" id="testimonialDots">
            <span class="testimonial-dot active" data-index="0"></span>
            <span class="testimonial-dot" data-index="1"></span>
            <span class="testimonial-dot" data-index="2"></span>
            <span class="testimonial-dot" data-index="3"></span>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="bg-light-fc py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h3 class="mb-2">Sağlıklı yaşam için ilk adımı atın</h3>
                <p class="text-muted-fc mb-0">Hemen üye olun ve ilk antrenmanınızı planlayın.</p>
            </div>
            <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                @if (User.Identity == null || !User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Register" class="btn-fc btn-fc-primary btn-fc-lg">
                        Hemen Başla
                    </a>
                }
                else
                {
                    <a asp-controller="Randevu" asp-action="Create" class="btn-fc btn-fc-primary btn-fc-lg">
                        Randevu Al
                    </a>
                }
            </div>
        </div>
    </div>
</section>

<!-- Premium CTA Band -->
<section class="cta-premium-band">
    <div class="container">
        <h3>Bugün başla, yarın farkı hisset!</h3>
        <p>Binlerce üyemiz gibi siz de sağlıklı yaşam yolculuğunuza başlayın.</p>
        @if (User.Identity == null || !User.Identity.IsAuthenticated)
        {
            <a asp-controller="Account" asp-action="Register" class="btn btn-lg">
                Ücretsiz Üye Ol
            </a>
        }
        else
        {
            <a asp-controller="Ai" asp-action="Recommend" class="btn btn-lg">
                AI Öneri Al
            </a>
        }
    </div>
</section>

