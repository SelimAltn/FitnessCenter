@model FitnessCenter.Web.Models.ViewModels.AiRecommendVm

@{
    ViewData["Title"] = "AI Fitness Önerisi";
    var result = ViewBag.Result as FitnessCenter.Web.Models.ViewModels.AiResultVm;
    var showResult = ViewBag.ShowResult ?? false;
    var visionEnabled = ViewBag.VisionEnabled ?? false;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            
            <!-- Başlık -->
            <div class="text-center mb-4">
                <h2 class="fw-bold">
                    <i class="bi bi-robot text-primary"></i> AI Fitness Önerisi
                </h2>
                <p class="text-muted">Bilgilerinizi girerek veya fotoğraf yükleyerek kişisel öneri alın</p>
            </div>

            @if (ViewBag.Warning != null)
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>@ViewBag.Warning
                </div>
            }

            <!-- Validation Errors -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <i class="bi bi-x-circle me-2"></i>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }

            <!-- Yeni Öneri Butonu (Sonuç varken göster) -->
            @if (showResult)
            {
                <div class="d-flex justify-content-center mb-4">
                    <a asp-action="Recommend" class="btn-fc btn-fc-primary btn-fc-lg">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="8" x2="12" y2="16"/>
                            <line x1="8" y1="12" x2="16" y2="12"/>
                        </svg>
                        Yeni Öneri Al
                    </a>
                </div>
            }

            <!-- Form (Sonuç yokken göster) -->
            @if (!showResult)
            {
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form asp-action="Recommend" method="post" enctype="multipart/form-data" id="aiForm">
                        @Html.AntiForgeryToken()

                        <!-- Mod Seçimi -->
                        <div class="mb-4">
                            <div class="btn-group w-100" role="group">
                                <input type="radio" class="btn-check" name="inputMode" id="modeData" value="data" checked>
                                <label class="btn btn-outline-primary" for="modeData">
                                    <i class="bi bi-clipboard-data me-2"></i> Ölçülerimi Gir
                                </label>
                                <input type="radio" class="btn-check" name="inputMode" id="modePhoto" value="photo" @(!visionEnabled ? "disabled" : "")>
                                <label class="btn btn-outline-success @(!visionEnabled ? "disabled" : "")" for="modePhoto">
                                    <i class="bi bi-camera me-2"></i> Fotoğraf Yükle
                                    @if (!visionEnabled)
                                    {
                                        <small>(Yapılandırılmamış)</small>
                                    }
                                </label>
                            </div>
                        </div>

                        <!-- FOTOĞRAF BÖLÜMÜ -->
                        <div id="photoSection" class="mb-4" style="display: none;">
                            <div class="border border-2 border-dashed rounded p-4 text-center bg-light">
                                <i class="bi bi-cloud-upload display-4 text-success mb-2"></i>
                                <p class="mb-2">Fotoğraf Seç (JPG/PNG, max 5MB)</p>
                                <input type="file" class="form-control" name="Photo" id="photoInput" 
                                       accept=".jpg,.jpeg,.png" style="max-width: 300px; margin: 0 auto;">
                                <small class="text-muted d-block mt-2">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Vücut analizi için net bir fotoğraf yükleyin
                                </small>
                            </div>
                        </div>

                        <!-- ÖLÇÜ BÖLÜMÜ -->
                        <div id="dataSection" class="mb-4">
                            <h5 class="text-primary mb-3">
                                <i class="bi bi-rulers me-2"></i> Vücut Ölçüleri
                            </h5>
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <label asp-for="Boy" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Boy" class="form-control data-input" placeholder="175">
                                        <span class="input-group-text">cm</span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="Kilo" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="Kilo" class="form-control data-input" placeholder="75">
                                        <span class="input-group-text">kg</span>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="Yas" class="form-label"></label>
                                    <input asp-for="Yas" class="form-control data-input" placeholder="25">
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="Cinsiyet" class="form-label"></label>
                                    <select asp-for="Cinsiyet" class="form-select data-input">
                                        <option value="">Seçiniz</option>
                                        @foreach (var item in FitnessCenter.Web.Models.ViewModels.AiRecommendVm.CinsiyetSecenekleri)
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Tercihler (Her İki Modda Aktif) -->
                        <div class="mb-4">
                            <h5 class="text-success mb-3">
                                <i class="bi bi-gear me-2"></i> Tercihler
                            </h5>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label asp-for="Hedef" class="form-label"></label>
                                    <select asp-for="Hedef" class="form-select">
                                        <option value="">Seçiniz</option>
                                        @foreach (var item in FitnessCenter.Web.Models.ViewModels.AiRecommendVm.HedefSecenekleri)
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Ekipman" class="form-label"></label>
                                    <select asp-for="Ekipman" class="form-select">
                                        <option value="">Seçiniz</option>
                                        @foreach (var item in FitnessCenter.Web.Models.ViewModels.AiRecommendVm.EkipmanSecenekleri)
                                        {
                                            <option value="@item">@item</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="AntrenmanGunu" class="form-label"></label>
                                    <select asp-for="AntrenmanGunu" class="form-select">
                                        <option value="">Seçiniz</option>
                                        @for (int i = 1; i <= 7; i++)
                                        {
                                            <option value="@i">@i gün</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="mt-4 text-center">
                            <button type="submit" class="btn btn-primary btn-lg px-5" id="submitBtn">
                                <i class="bi bi-stars me-2"></i> Öneri Al
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            } @* End of !showResult condition *@

            <!-- SONUÇ ALANI -->
            @if (showResult && result != null)
            {
                @if (result.IsSuccess)
                {
                    <!-- Özet Kartı -->
                    <div class="card shadow mb-4 border-primary">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <span><i class="bi bi-graph-up me-2"></i> Analiz Özeti</span>
                            @if (result.IsCached)
                            {
                                <span class="badge bg-light text-primary">
                                    <i class="bi bi-lightning me-1"></i> Cache
                                </span>
                            }
                        </div>
                        <div class="card-body">
                            <div class="row text-center mb-3">
                                @if (result.BMI.HasValue)
                                {
                                    <div class="col-4">
                                        <div class="fs-2 fw-bold text-primary">@result.BMI.Value.ToString("F1")</div>
                                        <small class="text-muted">BMI</small>
                                    </div>
                                }
                                <div class="col-4">
                                    <div class="fs-4 fw-bold @GetCategoryClass(result.BodyCategory)">@result.BodyCategory</div>
                                    <small class="text-muted">Kategori</small>
                                </div>
                                <div class="col-4">
                                    <div class="fs-5 text-info">@Model.Hedef</div>
                                    <small class="text-muted">Hedef</small>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(result.Summary))
                            {
                                <p class="lead mb-0">@result.Summary</p>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(result.RawText))
                    {
                        <div class="alert alert-info">
                            <pre class="mb-0" style="white-space: pre-wrap;">@result.RawText</pre>
                        </div>
                    }
                    else
                    {
                        <!-- Dashboard Grid Layout -->
                        <div class="ai-results-grid">
                            <!-- Antrenman Planı -->
                            @if (result.WorkoutPlan?.Count > 0)
                            {
                                <div class="ai-result-card">
                                    <div class="card shadow-sm h-100">
                                        <div class="card-header bg-success text-white">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                                <line x1="3" y1="10" x2="21" y2="10"></line>
                                            </svg>
                                            Haftalık Antrenman Planı
                                        </div>
                                        <ul class="list-group list-group-flush">
                                            @foreach (var item in result.WorkoutPlan)
                                            {
                                                <li class="list-group-item">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2 text-success">
                                                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                                                    </svg>
                                                    @item
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            }

                            <!-- Beslenme Önerileri -->
                            @if (result.NutritionTips?.Count > 0)
                            {
                                <div class="ai-result-card">
                                    <div class="card shadow-sm h-100">
                                        <div class="card-header bg-info text-white">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                                <path d="M18 8h1a4 4 0 0 1 0 8h-1"></path>
                                                <path d="M2 8h16v9a4 4 0 0 1-4 4H6a4 4 0 0 1-4-4V8z"></path>
                                                <line x1="6" y1="1" x2="6" y2="4"></line>
                                                <line x1="10" y1="1" x2="10" y2="4"></line>
                                                <line x1="14" y1="1" x2="14" y2="4"></line>
                                            </svg>
                                            Beslenme Önerileri
                                        </div>
                                        <ul class="list-group list-group-flush">
                                            @foreach (var item in result.NutritionTips)
                                            {
                                                <li class="list-group-item">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2 text-danger">
                                                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                                                    </svg>
                                                    @item
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            }

                            <!-- Uyarılar / Notlar (Full Width) -->
                            @if (result.Notes?.Count > 0)
                            {
                                <div class="ai-notes-section">
                                    <div class="card shadow-sm border-warning">
                                        <div class="card-header bg-warning text-dark">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                                <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                                                <line x1="12" y1="9" x2="12" y2="13"></line>
                                                <line x1="12" y1="17" x2="12.01" y2="17"></line>
                                            </svg>
                                            Dikkat Edilmesi Gerekenler
                                        </div>
                                        <ul class="list-group list-group-flush">
                                            @foreach (var item in result.Notes)
                                            {
                                                <li class="list-group-item list-group-item-warning">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                                        <circle cx="12" cy="12" r="10"></circle>
                                                        <line x1="12" y1="16" x2="12" y2="12"></line>
                                                        <line x1="12" y1="8" x2="12.01" y2="8"></line>
                                                    </svg>
                                                    @item
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            }

                            <!-- Photo Mode: AI Tahmini Görünüm (fal.ai ile üretilmiş) -->
                            @if (Model.IsPhotoMode && !string.IsNullOrEmpty(result.AfterGeneratedImageUrl))
                            {
                                <div class="ai-transformation-section" style="grid-column: 1 / -1;">
                                    <div class="card shadow-sm border-success">
                                        <div class="card-header bg-success text-white">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                                <path d="M23 19a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h4l2-3h6l2 3h4a2 2 0 0 1 2 2z"></path>
                                                <circle cx="12" cy="13" r="4"></circle>
                                            </svg>
                                            AI Tahmini Dönüşüm (Fotoğraftan)
                                        </div>
                                        <div class="card-body">
                                            <div class="row align-items-center">
                                                <!-- Önceden (Kullanıcının yüklediği fotoğraf) -->
                                                @if (!string.IsNullOrEmpty(result.BeforeImagePath))
                                                {
                                                    <div class="col-md-5 text-center mb-3 mb-md-0">
                                                        <div class="position-relative">
                                                            <span class="badge bg-secondary position-absolute top-0 start-50 translate-middle-x" style="z-index: 10; margin-top: -10px;">
                                                                Önceden
                                                            </span>
                                                            <img src="@result.BeforeImagePath" alt="Önceden" 
                                                                 class="img-fluid rounded shadow" 
                                                                 style="max-height: 350px; object-fit: contain; border: 3px solid #6c757d;"
                                                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                                                            <div style="display: none;" class="alert alert-warning mb-0 mt-2">
                                                                <small>Orijinal fotoğraf yüklenemedi</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- Ok işareti -->
                                                    <div class="col-md-2 text-center mb-3 mb-md-0">
                                                        <div class="d-flex align-items-center justify-content-center h-100">
                                                            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#10b981" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                                <line x1="5" y1="12" x2="19" y2="12"></line>
                                                                <polyline points="12 5 19 12 12 19"></polyline>
                                                            </svg>
                                                        </div>
                                                    </div>
                                                }
                                                <!-- 6 Ay Sonra (AI üretimi) -->
                                                <div class="@(!string.IsNullOrEmpty(result.BeforeImagePath) ? "col-md-5" : "col-12") text-center">
                                                    <div class="position-relative">
                                                        <span class="badge bg-success position-absolute top-0 start-50 translate-middle-x" style="z-index: 10; margin-top: -10px;">
                                                            6 Ay Sonra
                                                        </span>
                                                        <img src="@result.AfterGeneratedImageUrl" alt="6 Ay Sonra - AI Tahmini" 
                                                             class="img-fluid rounded shadow" 
                                                             style="max-height: 350px; object-fit: contain; border: 3px solid #10b981;"
                                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                                                        <div style="display: none;" class="alert alert-warning mb-0 mt-2">
                                                            <small>AI görseli yüklenemedi</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="alert alert-info mt-3 mb-0 py-2 text-center">
                                                <small>
                                                    <i class="bi bi-info-circle me-1"></i>
                                                    Bu görsel AI tarafından üretilmiştir. Gerçek sonuçlar kişiden kişiye değişir.
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else if (Model.IsPhotoMode && result.IsSuccess && string.IsNullOrEmpty(result.AfterGeneratedImageUrl))
                            {
                                <!-- Photo Mode ama görsel üretilemedi veya güvenlik filtresine takıldı -->
                                <div style="grid-column: 1 / -1;">
                                    <div class="alert alert-warning py-2 mb-3">
                                        <small>
                                            <i class="bi bi-shield-exclamation me-1"></i>
                                            AI görsel üretilemedi (güvenlik filtresi veya teknik sorun). Plan önerileri aşağıda gösteriliyor.
                                        </small>
                                    </div>
                                </div>
                            }

                            <!-- Tahmini Görünüm (Before/After - Şablon Görseller) -->
                            @if (!Model.IsPhotoMode && !string.IsNullOrEmpty(result.BeforeImagePath) && !string.IsNullOrEmpty(result.AfterImagePath))
                            {
                                <div class="ai-transformation-section" style="grid-column: 1 / -1;">
                                    <div class="card shadow-sm border-secondary">
                                        <div class="card-header bg-secondary text-white">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2">
                                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                                <polyline points="21 15 16 10 5 21"></polyline>
                                            </svg>
                                            Tahmini Görünüm (Temsili)
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-6 text-center">
                                                    <div class="border rounded p-3 bg-light" style="min-height: 220px;">
                                                        <img src="@result.BeforeImagePath" alt="Mevcut Durum" 
                                                             class="img-fluid rounded" 
                                                             style="max-height: 180px; object-fit: contain;"
                                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                                                        <div style="display: none;" class="text-muted">
                                                            <i class="bi bi-image" style="font-size: 3rem;"></i>
                                                            <p class="mb-0">Görsel yüklenemedi</p>
                                                        </div>
                                                    </div>
                                                    <p class="mt-2 mb-0 fw-bold text-muted">
                                                        <i class="bi bi-person me-1"></i>Mevcut
                                                    </p>
                                                </div>
                                                <div class="col-6 text-center">
                                                    <div class="border rounded p-3 bg-light" style="min-height: 220px; border-color: #198754 !important; border-width: 2px !important;">
                                                        <img src="@result.AfterImagePath" alt="Hedef Görünüm" 
                                                             class="img-fluid rounded" 
                                                             style="max-height: 180px; object-fit: contain;"
                                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                                                        <div style="display: none;" class="text-muted">
                                                            <i class="bi bi-image" style="font-size: 3rem;"></i>
                                                            <p class="mb-0">Görsel yüklenemedi</p>
                                                        </div>
                                                    </div>
                                                    <p class="mt-2 mb-0 fw-bold text-success">
                                                        <i class="bi bi-star-fill me-1"></i>Plan Sonrası
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="alert alert-info mt-3 mb-0 py-2">
                                                <small>
                                                    <i class="bi bi-info-circle me-1"></i>
                                                    @(result.TransformationCaption ?? "Bu görseller temsili olup bilgilendirme amaçlıdır.")
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                }
                else if (!result.IsHuman && !string.IsNullOrEmpty(result.PhotoDescription))
                {
                    <!-- Fotoğrafta İnsan Yok -->
                    <div class="alert alert-warning">
                        <h5 class="alert-heading">
                            <i class="bi bi-person-x me-2"></i> İnsan Tespit Edilemedi
                        </h5>
                        <p class="mb-2">Bu fotoğrafta: <strong>@result.PhotoDescription</strong></p>
                        <hr>
                        <p class="mb-0">
                            Lütfen bir insan fotoğrafı yükleyin veya ölçü bilgilerinizi girin.
                        </p>
                    </div>
                }
                else
                {
                    <!-- Hata -->
                    <div class="alert alert-danger">
                        <i class="bi bi-x-circle me-2"></i>
                        <strong>Hata:</strong> @result.ErrorMessage
                    </div>
                }
            }

        </div>
    </div>
</div>

@functions {
    string GetCategoryClass(string? category)
    {
        return category switch
        {
            "Zayıf" => "text-info",
            "Normal" => "text-success",
            "Kilolu" or "Şişman" => "text-warning",
            "Obez" => "text-danger",
            "Kaslı" => "text-primary",
            _ => "text-secondary"
        };
    }
}

@section Scripts {
    <script>
        const modeData = document.getElementById('modeData');
        const modePhoto = document.getElementById('modePhoto');
        const dataSection = document.getElementById('dataSection');
        const photoSection = document.getElementById('photoSection');
        const dataInputs = document.querySelectorAll('.data-input');
        const photoInput = document.getElementById('photoInput');

        function toggleMode() {
            if (modePhoto.checked) {
                // Photo modu
                photoSection.style.display = 'block';
                dataSection.style.display = 'none';
                dataInputs.forEach(el => { el.disabled = true; el.value = ''; });
                photoInput.disabled = false;
            } else {
                // Data modu
                photoSection.style.display = 'none';
                dataSection.style.display = 'block';
                dataInputs.forEach(el => el.disabled = false);
                photoInput.disabled = true;
                photoInput.value = '';
            }
        }

        modeData.addEventListener('change', toggleMode);
        modePhoto.addEventListener('change', toggleMode);

        // Form submit
        document.getElementById('aiForm').addEventListener('submit', function(e) {
            const btn = document.getElementById('submitBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span> AI analiz ediyor...';
        });

        // Başlangıç
        toggleMode();
    </script>
}

