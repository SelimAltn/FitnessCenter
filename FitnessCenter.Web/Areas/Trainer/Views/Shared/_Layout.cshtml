<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Eğitmen Paneli</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Fitness Center - Eğitmen Paneli" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .trainer-sidebar {
            width: 260px;
            min-height: calc(100vh - 60px);
            background: linear-gradient(180deg, #1e3a5f 0%, #2d5a87 100%);
            position: fixed;
            left: 0;
            top: 60px;
            padding-top: 1.5rem;
            z-index: 1000;
        }

        .trainer-sidebar .nav-link {
            color: rgba(255,255,255,0.8);
            padding: 0.85rem 1.5rem;
            border-radius: 0;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-weight: 500;
        }

        .trainer-sidebar .nav-link:hover,
        .trainer-sidebar .nav-link.active {
            color: #fff;
            background: rgba(255,255,255,0.15);
            border-left: 3px solid #4fc3f7;
        }

        .trainer-sidebar .nav-link svg {
            width: 20px;
            height: 20px;
            flex-shrink: 0;
        }

        .trainer-main {
            margin-left: 260px;
            padding: 2rem;
            min-height: calc(100vh - 60px);
            background: #f5f7fa;
        }

        .trainer-navbar {
            height: 60px;
            background: #1e3a5f;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1001;
        }

        .trainer-navbar .navbar-brand {
            color: #fff !important;
            font-weight: 600;
        }

        .trainer-content {
            margin-top: 60px;
        }

        .stat-card {
            background: #fff;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.06);
            transition: transform 0.2s ease;
        }

        .stat-card:hover {
            transform: translateY(-2px);
        }

        .stat-card .stat-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .stat-card .stat-value {
            font-size: 1.75rem;
            font-weight: 700;
            color: #1e3a5f;
        }

        .stat-card .stat-label {
            color: #6c757d;
            font-size: 0.875rem;
        }

        @@media (max-width: 991px) {
            .trainer-sidebar {
                transform: translateX(-100%);
            }
            .trainer-sidebar.show {
                transform: translateX(0);
            }
            .trainer-main {
                margin-left: 0;
            }
        }
    </style>
</head>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<FitnessCenter.Web.Models.Entities.ApplicationUser> SignInManager
@inject UserManager<FitnessCenter.Web.Models.Entities.ApplicationUser> UserManager

@{
    var currentUser = await UserManager.GetUserAsync(User);
    var userName = currentUser?.UserName ?? "Eğitmen";
}
<body data-theme="light">
    <!-- Top Navbar -->
    <nav class="navbar trainer-navbar">
        <div class="container-fluid px-4">
            <a class="navbar-brand d-flex align-items-center gap-2" asp-area="Trainer" asp-controller="Home" asp-action="Index">
                <img src="~/img/sau-logo.png" alt="SAÜ Logo" style="height: 32px; width: auto; border-radius: 4px;" onerror="this.style.display='none'">
                <span>Eğitmen Paneli</span>
            </a>

            <div class="d-flex align-items-center gap-3">
                @{
                    var userId = currentUser?.Id ?? "";
                    var okunmamisSayisi = 0;
                    var sonBildirimler = new List<FitnessCenter.Web.Models.Entities.Bildirim>();
                    
                    if (!string.IsNullOrEmpty(userId))
                    {
                        var dbContext = Context.RequestServices.GetRequiredService<FitnessCenter.Web.Data.Context.AppDbContext>();
                        okunmamisSayisi = dbContext.Bildirimler.Count(b => b.UserId == userId && !b.Okundu);
                        sonBildirimler = dbContext.Bildirimler
                            .Where(b => b.UserId == userId)
                            .OrderByDescending(b => b.OlusturulmaTarihi)
                            .Take(5)
                            .ToList();
                    }
                }
                
                <!-- Bildirim Çanı -->
                <div class="dropdown">
                    <a class="btn btn-link text-white text-decoration-none position-relative" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"/>
                            <path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"/>
                        </svg>
                        @if (okunmamisSayisi > 0)
                        {
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.65rem;">
                                @(okunmamisSayisi > 9 ? "9+" : okunmamisSayisi.ToString())
                            </span>
                        }
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" style="min-width: 320px;">
                        <li class="dropdown-header d-flex justify-content-between align-items-center">
                            <strong>Bildirimler</strong>
                            @if (okunmamisSayisi > 0)
                            {
                                <form asp-controller="Bildirim" asp-action="TumunuOku" asp-area="" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link btn-sm p-0 text-decoration-none">Tümünü oku</button>
                                </form>
                            }
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        @if (sonBildirimler.Any())
                        {
                            @foreach (var bildirim in sonBildirimler)
                            {
                                <li>
                                    <a class="dropdown-item small @(!bildirim.Okundu ? "fw-bold" : "")" 
                                       asp-controller="Bildirim" asp-action="Oku" asp-area="" asp-route-id="@bildirim.Id">
                                        <div>@bildirim.Baslik</div>
                                        <small class="text-muted">@bildirim.OlusturulmaTarihi.ToString("dd.MM HH:mm")</small>
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="dropdown-item-text text-center text-muted py-3">
                                Bildirim yok
                            </li>
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-center small" asp-controller="Bildirim" asp-action="Index" asp-area="">Tüm bildirimler</a></li>
                    </ul>
                </div>
                
                <!-- Kullanıcı Dropdown -->
                <div class="dropdown">
                    <button class="btn btn-link text-white text-decoration-none dropdown-toggle d-flex align-items-center gap-2" type="button" data-bs-toggle="dropdown">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/>
                            <circle cx="12" cy="7" r="4"/>
                        </svg>
                        @userName
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-area="Trainer" asp-controller="Profil" asp-action="Index">Profilim</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Account" asp-action="Logout" asp-area="" method="post">
                                <button type="submit" class="dropdown-item">Çıkış Yap</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="trainer-content d-flex">
        <!-- Sidebar -->
        <aside class="trainer-sidebar">
            <nav class="nav flex-column">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" 
                   asp-area="Trainer" asp-controller="Home" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                        <polyline points="9 22 9 12 15 12 15 22"/>
                    </svg>
                    Dashboard
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Randevu" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" 
                   asp-area="Trainer" asp-controller="Randevu" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                        <line x1="16" y1="2" x2="16" y2="6"/>
                        <line x1="8" y1="2" x2="8" y2="6"/>
                        <line x1="3" y1="10" x2="21" y2="10"/>
                    </svg>
                    Randevularım
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Calendar" ? "active" : "")" 
                   asp-area="Trainer" asp-controller="Randevu" asp-action="Calendar">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                        <line x1="16" y1="2" x2="16" y2="6"/>
                        <line x1="8" y1="2" x2="8" y2="6"/>
                        <line x1="3" y1="10" x2="21" y2="10"/>
                        <circle cx="8" cy="15" r="1"/>
                        <circle cx="12" cy="15" r="1"/>
                        <circle cx="16" cy="15" r="1"/>
                    </svg>
                    Takvim
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Profil" ? "active" : "")" 
                   asp-area="Trainer" asp-controller="Profil" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/>
                        <circle cx="12" cy="7" r="4"/>
                    </svg>
                    Profilim
                </a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Mesaj" ? "active" : "")" 
                   asp-area="Trainer" asp-controller="Mesaj" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                    </svg>
                    Mesajlar
                </a>
                <hr class="my-3 mx-3 border-light opacity-25" />
                <a class="nav-link" asp-area="Trainer" asp-controller="Mesaj" asp-action="AdminIletisim">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <circle cx="12" cy="12" r="10"/>
                        <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                        <line x1="12" y1="17" x2="12.01" y2="17"/>
                    </svg>
                    Admin ile İletişim
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="trainer-main flex-grow-1">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Info"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    @TempData["Info"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Site JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
