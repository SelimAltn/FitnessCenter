@model IEnumerable<FitnessCenter.Web.Models.Entities.Uyelik>
@{
    ViewData["Title"] = "Uyeler";
    var salon = ViewBag.Salon as FitnessCenter.Web.Models.Entities.Salon;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2>Aktif Uyeler</h2>
        <p class="text-muted mb-0">@salon?.Ad - Uye Listesi</p>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Uyelik Baslangic</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                Aktif uye bulunamadi.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var u in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@u.Uye?.AdSoyad</strong>
                                </td>
                                <td>@u.Uye?.Email</td>
                                <td>@(u.Uye?.Telefon ?? "-")</td>
                                <td>@u.BaslangicTarihi.ToString("dd.MM.yyyy")</td>
                                <td>
                                    <span class="badge bg-success">@u.Durum</span>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mt-3">
    <small class="text-muted">
        Toplam @Model.Count() aktif uye
    </small>
</div>
