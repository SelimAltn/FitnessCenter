@model IEnumerable<FitnessCenter.Web.Models.Entities.SubeMuduru>
@{
    ViewData["Title"] = "Sube Mudurleri";
}

@if (TempData["Success"] != null)
{
    <div data-toast-message="@TempData["Success"]" data-toast-type="success" style="display:none;"></div>
}
@if (TempData["Error"] != null)
{
    <div data-toast-message="@TempData["Error"]" data-toast-type="error" style="display:none;"></div>
}

<div class="page-header">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <div>
                <h1>Sube Mudurleri</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
                        <li class="breadcrumb-item active">Sube Mudurleri</li>
                    </ol>
                </nav>
            </div>
            <div class="page-header-actions">
                <a asp-action="Create" class="btn-fc btn-fc-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
                    Yeni Sube Muduru
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    @if (!Model.Any())
    {
        <div class="card-fc">
            <div class="card-body">
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
                    </div>
                    <h3 class="empty-state-title">Henuz sube muduru eklenmemis</h3>
                    <p class="empty-state-text">Subelere mudur atayarak baslayabilirsiniz.</p>
                    <a asp-action="Create" class="btn-fc btn-fc-primary">Sube Muduru Ekle</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card-fc">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table-fc">
                        <thead>
                            <tr>
                                <th>Ad Soyad</th>
                                <th>Email</th>
                                <th>Sube</th>
                                <th>Durum</th>
                                <th>Olusturulma</th>
                                <th style="width: 180px;">Islemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.AdSoyad</strong></td>
                                    <td>@item.Email</td>
                                    <td>
                                        <span class="badge-fc badge-fc-info">@item.Salon?.Ad</span>
                                    </td>
                                    <td>
                                        @if (item.Aktif)
                                        {
                                            <span class="badge-fc badge-fc-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge-fc badge-fc-danger">Pasif</span>
                                        }
                                    </td>
                                    <td class="text-muted-fc">@item.OlusturulmaTarihi.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-fc btn-fc-primary btn-fc-sm">Duzenle</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-fc btn-fc-danger btn-fc-sm">Sil</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
