@model FitnessCenter.Web.Areas.Admin.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<!-- Toast Data for JS -->
@if (TempData["Success"] != null)
{
    <div data-toast-message="@TempData["Success"]" data-toast-type="success" style="display:none;"></div>
}
@if (TempData["Error"] != null)
{
    <div data-toast-message="@TempData["Error"]" data-toast-type="danger" style="display:none;"></div>
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <div>
                <h1>Dashboard</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Admin Paneli</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Dashboard</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <!-- Summary Stats Cards -->
    <div class="row g-4 mb-5">
        <!-- Salon Sayısı -->
        <div class="col-6 col-lg-3">
            <div class="card-fc h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <span class="d-inline-flex align-items-center justify-content-center rounded" style="width: 56px; height: 56px; background-color: var(--fc-primary-light);">
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--fc-primary);">
                                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                <polyline points="9 22 9 12 15 12 15 22"></polyline>
                            </svg>
                        </span>
                        <div>
                            <div class="text-muted-fc" style="font-size: 0.875rem;">Toplam Salon</div>
                            <h3 class="mb-0">@Model.ToplamSalon</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Üye Sayısı -->
        <div class="col-6 col-lg-3">
            <div class="card-fc h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <span class="d-inline-flex align-items-center justify-content-center rounded" style="width: 56px; height: 56px; background-color: var(--fc-success-light);">
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--fc-success);">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                                <circle cx="9" cy="7" r="4"/>
                                <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                            </svg>
                        </span>
                        <div>
                            <div class="text-muted-fc" style="font-size: 0.875rem;">Toplam Üye</div>
                            <h3 class="mb-0">@Model.ToplamUye</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Eğitmen Sayısı -->
        <div class="col-6 col-lg-3">
            <div class="card-fc h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <span class="d-inline-flex align-items-center justify-content-center rounded" style="width: 56px; height: 56px; background-color: var(--fc-warning-light);">
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--fc-warning);">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                        </span>
                        <div>
                            <div class="text-muted-fc" style="font-size: 0.875rem;">Toplam Eğitmen</div>
                            <h3 class="mb-0">@Model.ToplamEgitmen</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Randevu Sayısı -->
        <div class="col-6 col-lg-3">
            <div class="card-fc h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <span class="d-inline-flex align-items-center justify-content-center rounded" style="width: 56px; height: 56px; background-color: var(--fc-info-light);">
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="color: var(--fc-info);">
                                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                <line x1="16" y1="2" x2="16" y2="6"></line>
                                <line x1="8" y1="2" x2="8" y2="6"></line>
                                <line x1="3" y1="10" x2="21" y2="10"></line>
                            </svg>
                        </span>
                        <div>
                            <div class="text-muted-fc" style="font-size: 0.875rem;">Toplam Randevu</div>
                            <h3 class="mb-0">@Model.ToplamRandevu</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Salon Finansları Tablosu -->
    <div class="card-fc mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-0">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2" style="color: var(--fc-primary);">
                        <line x1="12" y1="1" x2="12" y2="23"></line>
                        <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                    </svg>
                    Salon Bazlı Finans İstatistikleri
                </h5>
            </div>
            <span class="badge-fc badge-fc-info">Yıllık</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table-fc mb-0">
                    <thead>
                        <tr>
                            <th>Salon Adı</th>
                            <th class="text-center">Üye Sayısı</th>
                            <th class="text-center">Eğitmen Sayısı</th>
                            <th class="text-end">Gelir (₺)</th>
                            <th class="text-end">Gider (₺)</th>
                            <th class="text-end">Kâr (₺)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.SalonFinanslari.Count == 0)
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted-fc py-5">
                                    Henüz salon kaydı bulunmuyor.
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var salon in Model.SalonFinanslari)
                            {
                                <tr>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Salons" asp-action="Details" asp-route-id="@salon.SalonId" class="text-decoration-none">
                                            <strong>@salon.SalonAdi</strong>
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-fc badge-fc-success">@salon.UyeSayisi</span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge-fc badge-fc-warning">@salon.EgitmenSayisi</span>
                                    </td>
                                    <td class="text-end" style="color: var(--fc-success); font-weight: 600;">
                                        @salon.Gelir.ToString("N0")
                                    </td>
                                    <td class="text-end" style="color: var(--fc-danger); font-weight: 600;">
                                        @salon.Gider.ToString("N0")
                                    </td>
                                    <td class="text-end">
                                        @if (salon.Kar >= 0)
                                        {
                                            <span style="color: var(--fc-success); font-weight: 700;">
                                                +@salon.Kar.ToString("N0")
                                            </span>
                                        }
                                        else
                                        {
                                            <span style="color: var(--fc-danger); font-weight: 700;">
                                                @salon.Kar.ToString("N0")
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Zincir Toplamı Kartı -->
    <div class="card-fc" style="background: linear-gradient(135deg, var(--fc-primary) 0%, var(--fc-primary-dark) 100%); color: white;">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-4 text-center mb-3 mb-md-0">
                    <div style="font-size: 0.875rem; opacity: 0.9;">Zincir Toplam Gelir</div>
                    <div style="font-size: 2rem; font-weight: 700;">₺@Model.ToplamGelir.ToString("N0")</div>
                </div>
                <div class="col-md-4 text-center mb-3 mb-md-0">
                    <div style="font-size: 0.875rem; opacity: 0.9;">Zincir Toplam Gider</div>
                    <div style="font-size: 2rem; font-weight: 700;">₺@Model.ToplamGider.ToString("N0")</div>
                </div>
                <div class="col-md-4 text-center">
                    <div style="font-size: 0.875rem; opacity: 0.9;">Net Kâr</div>
                    @if (Model.ToplamKar >= 0)
                    {
                        <div style="font-size: 2.5rem; font-weight: 700; color: #a7f3d0;">
                            +₺@Model.ToplamKar.ToString("N0")
                        </div>
                    }
                    else
                    {
                        <div style="font-size: 2.5rem; font-weight: 700; color: #fecaca;">
                            ₺@Model.ToplamKar.ToString("N0")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
