@{
    ViewData["Title"] = "Admin Paneli";
}

<!-- Toast Data for JS -->
@if (TempData["Success"] != null)
{
    <div data-toast-message="@TempData["Success"]" data-toast-type="success" style="display:none;"></div>
}
@if (TempData["Error"] != null)
{
    <div data-toast-message="@TempData["Error"]" data-toast-type="danger" style="display:none;"></div>
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <div>
                <h1>Admin Paneli</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Admin Paneli</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row g-4">
        <!-- Welcome Card -->
        <div class="col-12">
            <div class="card-fc">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-3">
                        <span class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 56px; height: 56px; background: linear-gradient(135deg, var(--fc-primary-light), var(--fc-primary)); color: white;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M12 20h9"></path>
                                <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
                            </svg>
                        </span>
                        <div>
                            <h4 class="mb-1">Hoş Geldiniz, Yönetici!</h4>
                            <p class="text-muted-fc mb-0">Fitness Center yönetim panelinden tüm işlemlerinizi gerçekleştirebilirsiniz.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Management Links -->
        <div class="col-md-6 col-lg-4">
            <a asp-area="Admin" asp-controller="Salons" asp-action="Index" class="text-decoration-none">
                <div class="card-fc h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center gap-3">
                            <span class="d-inline-flex align-items-center justify-content-center rounded" style="width: 48px; height: 48px; background-color: var(--fc-primary-light);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary-fc">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                </svg>
                            </span>
                            <div>
                                <h5 class="mb-0">Salonlar</h5>
                                <small class="text-muted-fc">Şube yönetimi</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a asp-area="Admin" asp-controller="Hizmet" asp-action="Index" class="text-decoration-none">
                <div class="card-fc h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center gap-3">
                            <span class="d-inline-flex align-items-center justify-content-center rounded" style="width: 48px; height: 48px; background-color: var(--fc-success-light);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-success-fc">
                                    <path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path>
                                    <polyline points="14 2 14 8 20 8"></polyline>
                                </svg>
                            </span>
                            <div>
                                <h5 class="mb-0">Hizmetler</h5>
                                <small class="text-muted-fc">Hizmet türleri</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a asp-area="Admin" asp-controller="Egitmen" asp-action="Index" class="text-decoration-none">
                <div class="card-fc h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center gap-3">
                            <span class="d-inline-flex align-items-center justify-content-center rounded" style="width: 48px; height: 48px; background-color: var(--fc-warning-light);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-warning-fc">
                                    <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="12" cy="7" r="4"></circle>
                                </svg>
                            </span>
                            <div>
                                <h5 class="mb-0">Eğitmenler</h5>
                                <small class="text-muted-fc">Eğitmen yönetimi</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a asp-area="Admin" asp-controller="Kullanici" asp-action="Index" class="text-decoration-none">
                <div class="card-fc h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center gap-3">
                            <span class="d-inline-flex align-items-center justify-content-center rounded" style="width: 48px; height: 48px; background-color: var(--fc-info-light);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-info-fc">
                                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
                                    <circle cx="9" cy="7" r="4"/>
                                    <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                                </svg>
                            </span>
                            <div>
                                <h5 class="mb-0">Kullanıcılar</h5>
                                <small class="text-muted-fc">Tüm hesaplar</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a asp-area="Admin" asp-controller="Uye" asp-action="Index" class="text-decoration-none">
                <div class="card-fc h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center gap-3">
                            <span class="d-inline-flex align-items-center justify-content-center rounded" style="width: 48px; height: 48px; background-color: var(--fc-success-light);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-success-fc">
                                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                                    <line x1="16" y1="2" x2="16" y2="6"/>
                                    <line x1="8" y1="2" x2="8" y2="6"/>
                                    <line x1="3" y1="10" x2="21" y2="10"/>
                                    <path d="M9 16l2 2 4-4"/>
                                </svg>
                            </span>
                            <div>
                                <h5 class="mb-0">Üyelikler</h5>
                                <small class="text-muted-fc">Üyelik yönetimi</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a asp-area="Admin" asp-controller="Randevu" asp-action="Index" class="text-decoration-none">
                <div class="card-fc h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center gap-3">
                            <span class="d-inline-flex align-items-center justify-content-center rounded" style="width: 48px; height: 48px; background-color: var(--fc-danger-light);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-danger-fc">
                                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                    <line x1="16" y1="2" x2="16" y2="6"></line>
                                    <line x1="8" y1="2" x2="8" y2="6"></line>
                                    <line x1="3" y1="10" x2="21" y2="10"></line>
                                </svg>
                            </span>
                            <div>
                                <h5 class="mb-0">Randevular</h5>
                                <small class="text-muted-fc">Randevu yönetimi</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-6 col-lg-4">
            <a asp-area="Admin" asp-controller="Musaitlik" asp-action="Index" class="text-decoration-none">
                <div class="card-fc h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center gap-3">
                            <span class="d-inline-flex align-items-center justify-content-center rounded" style="width: 48px; height: 48px; background-color: var(--fc-secondary-light);">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-secondary-fc">
                                    <circle cx="12" cy="12" r="10"></circle>
                                    <polyline points="12 6 12 12 16 14"></polyline>
                                </svg>
                            </span>
                            <div>
                                <h5 class="mb-0">Çalışma Saatleri</h5>
                                <small class="text-muted-fc">Müsaitlik yönetimi</small>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
