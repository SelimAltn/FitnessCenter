@{
    ViewData["Title"] = "Veritabani Seed";
}

<div class="page-header">
    <div class="container">
        <h1>Veritabani Seed</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                <li class="breadcrumb-item active">Seed</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container pb-5">
    <div class="card-fc">
        <div class="card-header" style="background: linear-gradient(135deg, #ef4444, #dc2626); color: white;">
            <h5 class="mb-0">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2">
                    <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
                    <line x1="12" y1="9" x2="12" y2="13"/>
                    <line x1="12" y1="17" x2="12.01" y2="17"/>
                </svg>
                DIKKAT: Yikici Islem
            </h5>
        </div>
        <div class="card-body">
            <div class="alert-fc alert-fc-danger mb-4">
                <strong>Bu islem veritabanini tamamen sifirlar!</strong>
            </div>

            <h5>Bu islem su verileri SILECEK:</h5>
            <ul>
                <li>Tum randevular</li>
                <li>Tum uyelikler</li>
                <li>Tum egitmenler ve musaitlikleri</li>
                <li>Tum hizmetler ve uzmanlik alanlari</li>
                <li>Tum salonlar</li>
                <li>Tum kullanicilar (KORUMA ALTINDAKILER HARIC)</li>
            </ul>

            <h5 class="mt-4">Korunan Veriler:</h5>
            <ul>
                <li><strong>g231210558@sakarya.edu.tr</strong> (Admin) - Tam koruma</li>
                <li><strong>s.la55m</strong> - Kullanici korunur, AiLog kayitlari korunur</li>
            </ul>

            <h5 class="mt-4">Olusturulacak Veriler:</h5>
            <ul>
                <li>20 Salon (2 adet 7/24 merkez, 18 standard)</li>
                <li>8 Uzmanlik alani</li>
                <li>10 Hizmet</li>
                <li>50 Egitmen (Identity hesaplari ile, sifre: 123456)</li>
                <li>200 Uye (sifre: 123456, 10 tanesi uyeliksiz)</li>
                <li>Uyelikler (1/2/4 yillik dagitim)</li>
                <li>Randevular (4 adet/uye, tumu Beklemede)</li>
            </ul>

            <hr class="my-4">

            <form asp-action="RunSeed" method="post">
                <div class="form-check mb-4">
                    <input class="form-check-input" type="checkbox" id="confirmCheck" required>
                    <label class="form-check-label" for="confirmCheck">
                        Yukaridaki uyarilari okudum ve veritabaninin sifirlanmasini onayliyorum.
                    </label>
                </div>

                <div class="d-flex gap-3">
                    <button type="submit" class="btn-fc btn-fc-danger btn-fc-lg" id="seedBtn" disabled>
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M21 12a9 9 0 1 1-6.219-8.56"/>
                        </svg>
                        Seed Islemini Baslat
                    </button>
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn-fc btn-fc-secondary btn-fc-lg">
                        Iptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('confirmCheck').addEventListener('change', function() {
            document.getElementById('seedBtn').disabled = !this.checked;
        });
    </script>
}
