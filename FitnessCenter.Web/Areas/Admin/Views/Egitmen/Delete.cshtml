@model FitnessCenter.Web.Models.Entities.Egitmen
@{
    ViewData["Title"] = "Eğitmen Sil";
    var aktifRandevu = (int)(ViewData["AktifRandevuSayisi"] ?? 0);
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Eğitmen Silme Onayı</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Dikkat!</strong> Bu işlem geri alınamaz.
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Ad Soyad</dt>
                        <dd class="col-sm-8"><strong>@Model.AdSoyad</strong></dd>
                        
                        <dt class="col-sm-4">E-posta</dt>
                        <dd class="col-sm-8">@(Model.Email ?? "-")</dd>
                        
                        <dt class="col-sm-4">Şube</dt>
                        <dd class="col-sm-8">@(Model.Salon?.Ad ?? "-")</dd>
                    </dl>

                    @if (aktifRandevu > 0)
                    {
                        <div class="alert alert-danger">
                            <strong>Uyarı:</strong> Bu eğitmenin <strong>@aktifRandevu aktif randevusu</strong> bulunmaktadır. 
                            Silme işlemi bu randevuları <strong>İptal</strong> edecek ve ilgili üyelere bildirim gönderecektir.
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">Evet, Sil</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Vazgeç</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
