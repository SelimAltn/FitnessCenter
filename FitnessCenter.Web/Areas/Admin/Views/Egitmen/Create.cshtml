@model FitnessCenter.Web.Models.ViewModels.EgitmenCreateVm
@{
    ViewData["Title"] = "Yeni Eğitmen";
    var salonlar = ViewData["Salonlar"] as SelectList;
    var uzmanlikAlanlari = ViewData["UzmanlikAlanlari"] as List<FitnessCenter.Web.Models.Entities.UzmanlikAlani> ?? new();
    var hizmetler = ViewData["Hizmetler"] as List<FitnessCenter.Web.Models.Entities.Hizmet> ?? new();
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Yeni Eğitmen Oluştur</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Listeye Dön
        </a>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <strong>Hata!</strong> Lütfen formu kontrol edin.
            <ul class="mb-0 mt-2">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <form asp-action="Create" method="post">
        <div class="row">
            <!-- Sol Kolon - Kişisel Bilgiler -->
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">1. Kişisel Bilgiler</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="AdSoyad" class="form-label"></label>
                            <input asp-for="AdSoyad" class="form-control" placeholder="Örn: Ahmet Yılmaz" />
                            <span asp-validation-for="AdSoyad" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" type="email" placeholder="ornek@email.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Telefon" class="form-label"></label>
                                <input asp-for="Telefon" class="form-control" placeholder="0532 XXX XX XX" />
                                <span asp-validation-for="Telefon" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="KullaniciAdi" class="form-label"></label>
                                <input asp-for="KullaniciAdi" class="form-control" placeholder="kullanici_adi" />
                                <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Sifre" class="form-label"></label>
                                <input asp-for="Sifre" class="form-control" placeholder="En az 6 karakter" />
                                <span asp-validation-for="Sifre" class="text-danger"></span>
                                <small class="text-muted">Bu şifre admin panelinde görünür kalacaktır.</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">2. Şube & Maaş</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="SalonId" class="form-label"></label>
                                <select asp-for="SalonId" asp-items="salonlar" class="form-select">
                                    <option value="">-- Şube Seçin --</option>
                                </select>
                                <span asp-validation-for="SalonId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Maas" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text">₺</span>
                                    <input asp-for="Maas" class="form-control" type="number" step="100" placeholder="15000" />
                                </div>
                                <span asp-validation-for="Maas" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">3. Uzmanlık Alanları</h5>
                    </div>
                    <div class="card-body">
                        @if (uzmanlikAlanlari.Any())
                        {
                            <div class="row">
                                @foreach (var uz in uzmanlikAlanlari)
                                {
                                    <div class="col-md-6 col-lg-4 mb-2">
                                        <div class="form-check">
                                            <input type="checkbox" name="SecilenUzmanliklar" value="@uz.Id" 
                                                   class="form-check-input" id="uz_@uz.Id"
                                                   @(Model.SecilenUzmanliklar.Contains(uz.Id) ? "checked" : "") />
                                            <label class="form-check-label" for="uz_@uz.Id">@uz.Ad</label>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-0">Henüz uzmanlık alanı tanımlanmamış. 
                                <a asp-controller="UzmanlikAlani" asp-action="Create">Yeni ekle</a>
                            </p>
                        }
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0">4. Yapabileceği Hizmetler</h5>
                    </div>
                    <div class="card-body">
                        @if (hizmetler.Any())
                        {
                            <p class="text-muted small mb-3">Eğitmenin randevu oluşturulurken seçilebilmesi için en az bir hizmet seçin.</p>
                            <div class="row">
                                @foreach (var hz in hizmetler)
                                {
                                    <div class="col-md-6 mb-2">
                                        <div class="form-check">
                                            <input type="checkbox" name="SecilenHizmetler" value="@hz.Id" 
                                                   class="form-check-input" id="hz_@hz.Id"
                                                   @(Model.SecilenHizmetler.Contains(hz.Id) ? "checked" : "") />
                                            <label class="form-check-label" for="hz_@hz.Id">
                                                @hz.Ad <small class="text-muted">(@hz.SureDakika dk)</small>
                                            </label>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-0">Henüz hizmet tanımlanmamış. 
                                <a asp-controller="Hizmet" asp-action="Create">Yeni ekle</a>
                            </p>
                        }
                    </div>
                </div>
            </div>

            <!-- Sağ Kolon - Çalışma Saatleri ve Biyografi -->
            <div class="col-lg-6">
                <div class="card mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">4. Haftalık Çalışma Saatleri</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted small mb-3">Çalıştığı günleri işaretleyip saat aralığını girin.</p>
                        @for (int i = 0; i < Model.CalismaSaatleri.Count; i++)
                        {
                            var cs = Model.CalismaSaatleri[i];
                            <input type="hidden" name="CalismaSaatleri[@i].Gun" value="@((int)cs.Gun)" />
                            
                            <div class="row align-items-center mb-2 py-2 border-bottom">
                                <div class="col-md-3">
                                    <div class="form-check">
                                        <input type="checkbox" name="CalismaSaatleri[@i].Calisiyor" value="true" 
                                               class="form-check-input work-day-check" id="day_@i"
                                               data-index="@i"
                                               @(cs.Calisiyor ? "checked" : "") />
                                        <label class="form-check-label fw-medium" for="day_@i">@cs.GunAdi</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <input type="time" name="CalismaSaatleri[@i].BaslangicSaati" 
                                           class="form-control form-control-sm time-input time-input-@i"
                                           value="@(cs.BaslangicSaati?.ToString(@"hh\:mm"))"
                                           @(cs.Calisiyor ? "" : "disabled") />
                                </div>
                                <div class="col-md-1 text-center">-</div>
                                <div class="col-md-4">
                                    <input type="time" name="CalismaSaatleri[@i].BitisSaati" 
                                           class="form-control form-control-sm time-input time-input-@i"
                                           value="@(cs.BitisSaati?.ToString(@"hh\:mm"))"
                                           @(cs.Calisiyor ? "" : "disabled") />
                                </div>
                            </div>
                        }
                        
                        <div class="mt-3">
                            <button type="button" class="btn btn-sm btn-outline-secondary" id="copyToAll">
                                Pazartesi saatlerini tüm günlere uygula
                            </button>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">5. Biyografi</h5>
                    </div>
                    <div class="card-body">
                        <textarea asp-for="Biyografi" class="form-control" rows="5" 
                                  placeholder="Eğitmenin deneyimi, sertifikaları, uzmanlık alanları hakkında kısa bilgi..."></textarea>
                        <span asp-validation-for="Biyografi" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-check-lg me-1"></i> Eğitmeni Oluştur
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Gün checkbox'ı toggle edildiğinde saat inputlarını enable/disable et
        document.querySelectorAll('.work-day-check').forEach(function(checkbox) {
            checkbox.addEventListener('change', function() {
                var index = this.dataset.index;
                var inputs = document.querySelectorAll('.time-input-' + index);
                inputs.forEach(function(input) {
                    input.disabled = !checkbox.checked;
                    if (!checkbox.checked) {
                        input.value = '';
                    }
                });
            });
        });

        // Pazartesi saatlerini tüm günlere uygula
        document.getElementById('copyToAll').addEventListener('click', function() {
            var mondayStart = document.querySelector('input[name="CalismaSaatleri[0].BaslangicSaati"]').value;
            var mondayEnd = document.querySelector('input[name="CalismaSaatleri[0].BitisSaati"]').value;
            var mondayChecked = document.querySelector('input[name="CalismaSaatleri[0].Calisiyor"]').checked;

            for (var i = 1; i < 7; i++) {
                var checkbox = document.getElementById('day_' + i);
                checkbox.checked = mondayChecked;
                checkbox.dispatchEvent(new Event('change'));
                
                if (mondayChecked) {
                    document.querySelector('input[name="CalismaSaatleri[' + i + '].BaslangicSaati"]').value = mondayStart;
                    document.querySelector('input[name="CalismaSaatleri[' + i + '].BitisSaati"]').value = mondayEnd;
                }
            }
        });
    </script>
}
