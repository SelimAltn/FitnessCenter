@model FitnessCenter.Web.Models.Entities.Egitmen

@{
    ViewData["Title"] = "Yeni Eğitmen";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div>
            <h1>Yeni Eğitmen</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Eğitmenler</a></li>
                    <li class="breadcrumb-item active">Yeni Eğitmen</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card-fc">
                <div class="card-header">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2"><path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="8.5" cy="7" r="4"/><line x1="20" y1="8" x2="20" y2="14"/><line x1="23" y1="11" x2="17" y2="11"/></svg>
                    Eğitmen Bilgileri
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert-fc alert-fc-danger mb-4"></div>

                        <div class="form-fc-group">
                            <label asp-for="AdSoyad" class="form-fc-label">Ad Soyad</label>
                            <input asp-for="AdSoyad" class="form-fc-control" placeholder="Eğitmenin adı ve soyadı" />
                            <span asp-validation-for="AdSoyad" class="form-fc-error"></span>
                        </div>

                        <div class="form-fc-group">
                            <label asp-for="Uzmanlik" class="form-fc-label">Uzmanlık Alanı</label>
                            <input asp-for="Uzmanlik" class="form-fc-control" placeholder="Örn: Fitness, Yoga, Pilates" />
                            <span asp-validation-for="Uzmanlik" class="form-fc-error"></span>
                        </div>

                        <div class="form-fc-group">
                            <label asp-for="Biyografi" class="form-fc-label">Biyografi</label>
                            <textarea asp-for="Biyografi" class="form-fc-control" rows="4" placeholder="Eğitmen hakkında kısa bilgi..."></textarea>
                            <span asp-validation-for="Biyografi" class="form-fc-error"></span>
                        </div>

                        <div class="d-flex gap-3 pt-3">
                            <button type="submit" class="btn-fc btn-fc-success">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/><polyline points="17 21 17 13 7 13 7 21"/><polyline points="7 3 7 8 15 8"/></svg>
                                Kaydet
                            </button>
                            <a asp-action="Index" class="btn-fc btn-fc-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
