@model IEnumerable<FitnessCenter.Web.Models.Entities.Egitmen>

@{
    ViewData["Title"] = "Eğitmenler";
}

<h2>Eğitmenler</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Eğitmen Ekle</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Uzmanlık</th>
            <th>Biyografi</th>
            <th style="width: 180px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AdSoyad</td>
                <td>@item.Uzmanlik</td>
                <td>@item.Biyografi</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
