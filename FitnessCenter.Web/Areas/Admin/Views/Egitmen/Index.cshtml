@model List<FitnessCenter.Web.Models.Entities.Egitmen>
@{
    ViewData["Title"] = "Eğitmenler";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Eğitmen Yönetimi</h2>
        <div class="d-flex gap-2">
            <a asp-controller="UzmanlikAlani" asp-action="Index" class="btn btn-outline-info">
                Uzmanlık Alanları
            </a>
            <a asp-action="Create" class="btn btn-primary">
                + Yeni Eğitmen
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Eğitmen</th>
                                <th>İletişim</th>
                                <th>Şube</th>
                                <th>Uzmanlıklar</th>
                                <th>Maaş</th>
                                <th>Durum</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var e in Model)
                            {
                                <tr class="@(!e.Aktif ? "table-secondary" : "")">
                                    <td>
                                        <strong>@e.AdSoyad</strong>
                                        @if (!string.IsNullOrEmpty(e.KullaniciAdi))
                                        {
                                            <br/><small class="text-muted">@@e.KullaniciAdi</small>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(e.Email))
                                        {
                                            <small>@e.Email</small><br/>
                                        }
                                        @if (!string.IsNullOrEmpty(e.Telefon))
                                        {
                                            <small class="text-muted">@e.Telefon</small>
                                        }
                                    </td>
                                    <td>
                                        @if (e.Salon != null)
                                        {
                                            <span class="badge bg-primary">@e.Salon.Ad</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (e.EgitmenUzmanliklari?.Any() == true)
                                        {
                                            @foreach (var eu in e.EgitmenUzmanliklari.Take(3))
                                            {
                                                <span class="badge bg-info me-1">@eu.UzmanlikAlani?.Ad</span>
                                            }
                                            @if (e.EgitmenUzmanliklari.Count > 3)
                                            {
                                                <span class="badge bg-secondary">+@(e.EgitmenUzmanliklari.Count - 3)</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (e.Maas.HasValue)
                                        {
                                            <strong class="text-success">@e.Maas?.ToString("C0")</strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (e.Aktif)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Pasif</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-action="Details" asp-route-id="@e.Id" class="btn btn-sm btn-outline-secondary">
                                                Detay
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@e.Id" class="btn btn-sm btn-outline-primary">
                                                Düzenle
                                            </a>
                                            <form asp-action="ToggleAktif" asp-route-id="@e.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-warning" 
                                                        title="@(e.Aktif ? "Pasif Et" : "Aktif Et")">
                                                    @(e.Aktif ? "⏸" : "▶")
                                                </button>
                                            </form>
                                            <a asp-action="Delete" asp-route-id="@e.Id" class="btn btn-sm btn-outline-danger">
                                                Sil
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <h5>Henüz Eğitmen Yok</h5>
                    <p class="mb-3">Sisteme eğitmen eklemek için butona tıklayın.</p>
                    <a asp-action="Create" class="btn btn-primary">+ Yeni Eğitmen Ekle</a>
                </div>
            }
        </div>
    </div>
</div>
