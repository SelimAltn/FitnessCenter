@model List<FitnessCenter.Web.Models.Entities.UzmanlikAlani>
@{
    ViewData["Title"] = "Uzmanlık Alanları";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Uzmanlık Alanları Yönetimi</h2>
        <div class="d-flex gap-2">
            <a asp-controller="Egitmen" asp-action="Index" class="btn btn-outline-secondary">
                ← Eğitmenlere Dön
            </a>
            <a asp-action="Create" class="btn btn-primary">
                + Yeni Uzmanlık Alanı
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Uzmanlık Adı</th>
                                <th>Açıklama</th>
                                <th>Durum</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var u in Model)
                            {
                                <tr class="@(!u.Aktif ? "table-secondary" : "")">
                                    <td><strong>@u.Ad</strong></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(u.Aciklama))
                                        {
                                            <span class="text-muted">@(u.Aciklama.Length > 50 ? u.Aciklama.Substring(0, 50) + "..." : u.Aciklama)</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (u.Aktif)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Pasif</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group">
                                            <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-sm btn-outline-primary">
                                                Düzenle
                                            </a>
                                            <form asp-action="ToggleAktif" asp-route-id="@u.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-warning">
                                                    @(u.Aktif ? "Pasif Et" : "Aktif Et")
                                                </button>
                                            </form>
                                            <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-sm btn-outline-danger">
                                                Sil
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <h5>Henüz Uzmanlık Alanı Yok</h5>
                    <p class="mb-3">Eğitmenlere atayabileceğiniz uzmanlık alanları ekleyin.</p>
                    <a asp-action="Create" class="btn btn-primary">+ Yeni Uzmanlık Alanı</a>
                </div>
            }
        </div>
    </div>
</div>
