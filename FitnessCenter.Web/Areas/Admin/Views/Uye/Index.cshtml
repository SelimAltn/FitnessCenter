@model IEnumerable<FitnessCenter.Web.Models.Entities.Uye>

@{
    ViewData["Title"] = "Üye Listesi";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Üye Yönetimi</h3>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus"></i> Yeni Üye Ekle
        </a>
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Ad Soyad</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th style="width: 200px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AdSoyad</td>
                        <td>@item.Email</td>
                        <td>@item.Telefon</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>