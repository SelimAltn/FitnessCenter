@model FitnessCenter.Web.Models.Entities.Uye

@{
    ViewData["Title"] = "Üye Sil";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4>Üyeyi Silmek İstediğine Emin misin?</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Ad Soyad:</dt>
                    <dd class="col-sm-8">@Model.AdSoyad</dd>

                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Telefon:</dt>
                    <dd class="col-sm-8">@Model.Telefon</dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">Evet, Sil</button>
                        <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>