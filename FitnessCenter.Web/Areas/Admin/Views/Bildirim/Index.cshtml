@model IEnumerable<FitnessCenter.Web.Models.Entities.Bildirim>
@{
    ViewData["Title"] = "Bildirimler";
}

<!-- Toast Data -->
@if (TempData["Success"] != null)
{
    <div data-toast-message="@TempData["Success"]" data-toast-type="success" style="display:none;"></div>
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <div>
                <h1>Bildirimler</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
                        <li class="breadcrumb-item active">Bildirimler</li>
                    </ol>
                </nav>
            </div>
            <div class="page-header-actions">
                <form asp-action="TumunuOku" method="post" class="d-inline">
                    <button type="submit" class="btn-fc btn-fc-secondary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        Tümünü Okundu İşaretle
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    @if (!Model.Any())
    {
        <div class="card-fc">
            <div class="card-body">
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                            <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"/>
                            <path d="M13.73 21a2 2 0 0 1-3.46 0"/>
                        </svg>
                    </div>
                    <h3 class="empty-state-title">Bildirim Yok</h3>
                    <p class="empty-state-text">Henüz hiç bildiriminiz bulunmuyor.</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card-fc">
            <div class="card-body p-0">
                <div class="list-group list-group-flush">
                    @foreach (var bildirim in Model)
                    {
                        var okunduClass = bildirim.Okundu ? "text-muted" : "fw-bold";
                        var bgClass = bildirim.Okundu ? "" : "bg-light";
                        
                        <a asp-action="Oku" asp-route-id="@bildirim.Id" 
                           class="list-group-item list-group-item-action @bgClass d-flex justify-content-between align-items-start py-3">
                            <div class="ms-2 me-auto">
                                <div class="@okunduClass">@bildirim.Baslik</div>
                                <small class="text-muted">@bildirim.Mesaj</small>
                            </div>
                            <div class="text-end">
                                <small class="text-muted">@bildirim.OlusturulmaTarihi.ToString("dd.MM.yyyy HH:mm")</small>
                                @if (!bildirim.Okundu)
                                {
                                    <br/><span class="badge bg-primary">Yeni</span>
                                }
                            </div>
                        </a>
                    }
                </div>
            </div>
        </div>
    }
</div>
