@model FitnessCenter.Web.Models.Entities.Salon

@{
    ViewData["Title"] = "Salon Düzenle";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div>
            <h1>Salon Düzenle</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Salonlar</a></li>
                    <li class="breadcrumb-item active">Düzenle</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card-fc">
                <div class="card-header">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2"><path d="M12 20h9"/><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/></svg>
                    Salon Bilgilerini Düzenle
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert-fc alert-fc-danger mb-4"></div>

                        <div class="form-fc-group">
                            <label asp-for="Ad" class="form-fc-label">Salon Adı</label>
                            <input asp-for="Ad" class="form-fc-control" />
                            <span asp-validation-for="Ad" class="form-fc-error"></span>
                        </div>

                        <div class="form-fc-group">
                            <label asp-for="Adress" class="form-fc-label">Adres</label>
                            <input asp-for="Adress" class="form-fc-control" />
                            <span asp-validation-for="Adress" class="form-fc-error"></span>
                        </div>

                        <div class="form-fc-group">
                            <label asp-for="Aciklama" class="form-fc-label">Açıklama</label>
                            <textarea asp-for="Aciklama" class="form-fc-control" rows="3"></textarea>
                            <span asp-validation-for="Aciklama" class="form-fc-error"></span>
                        </div>

                        <hr class="my-4" />
                        <h6 class="mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                            Çalışma Saatleri
                        </h6>

                        <div class="form-fc-group">
                            <div class="form-check">
                                <input asp-for="Is24Hours" class="form-check-input" id="Is24Hours" />
                                <label asp-for="Is24Hours" class="form-check-label">7/24 Açık</label>
                            </div>
                            <small class="text-muted">Bu seçenek işaretlenirse salon 7 gün 24 saat çalışır.</small>
                        </div>

                        <div class="row" id="workingHoursSection">
                            <div class="col-md-6">
                                <div class="form-fc-group">
                                    <label asp-for="AcilisSaati" class="form-fc-label">Açılış Saati</label>
                                    <input asp-for="AcilisSaati" type="time" class="form-fc-control" id="AcilisSaati" />
                                    <span asp-validation-for="AcilisSaati" class="form-fc-error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-fc-group">
                                    <label asp-for="KapanisSaati" class="form-fc-label">Kapanış Saati</label>
                                    <input asp-for="KapanisSaati" type="time" class="form-fc-control" id="KapanisSaati" />
                                    <span asp-validation-for="KapanisSaati" class="form-fc-error"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-3 pt-3">
                            <button type="submit" class="btn-fc btn-fc-primary">Güncelle</button>
                            <a asp-action="Index" class="btn-fc btn-fc-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script>
        $(function() {
            function toggleWorkingHours() {
                var is24h = $('#Is24Hours').is(':checked');
                $('#AcilisSaati, #KapanisSaati').prop('disabled', is24h);
                if (is24h) {
                    $('#workingHoursSection').css('opacity', '0.5');
                } else {
                    $('#workingHoursSection').css('opacity', '1');
                }
            }
            $('#Is24Hours').on('change', toggleWorkingHours);
            toggleWorkingHours(); // ilk yükleme için
        });
    </script>
}

