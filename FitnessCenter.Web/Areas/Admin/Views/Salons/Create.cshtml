@model FitnessCenter.Web.Models.Entities.Salon

@{
    ViewData["Title"] = "Yeni Salon";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div>
            <h1>Yeni Salon</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Salonlar</a></li>
                    <li class="breadcrumb-item active">Yeni Salon</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card-fc">
                <div class="card-header">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
                    Salon Bilgileri
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert-fc alert-fc-danger mb-4"></div>

                        <div class="form-fc-group">
                            <label asp-for="Ad" class="form-fc-label">Salon Adı</label>
                            <input asp-for="Ad" class="form-fc-control" placeholder="Örn: Merkez Şube" />
                            <span asp-validation-for="Ad" class="form-fc-error"></span>
                        </div>

                        <div class="form-fc-group">
                            <label asp-for="Adress" class="form-fc-label">Adres</label>
                            <input asp-for="Adress" class="form-fc-control" placeholder="Tam adres..." />
                            <span asp-validation-for="Adress" class="form-fc-error"></span>
                        </div>

                        <div class="form-fc-group">
                            <label asp-for="Aciklama" class="form-fc-label">Açıklama</label>
                            <textarea asp-for="Aciklama" class="form-fc-control" rows="3" placeholder="Salon hakkında bilgi..."></textarea>
                            <span asp-validation-for="Aciklama" class="form-fc-error"></span>
                        </div>

                        <div class="d-flex gap-3 pt-3">
                            <button type="submit" class="btn-fc btn-fc-success">Kaydet</button>
                            <a asp-action="Index" class="btn-fc btn-fc-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
