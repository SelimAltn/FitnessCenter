@model FitnessCenter.Web.Models.Entities.Salon

@{
    ViewData["Title"] = "Salon Sil";
}

<h2>Salon Sil</h2>

<p>Bu salonu silmek istediğine emin misin?</p>

<div class="mb-3">
    <strong>@Html.DisplayNameFor(m => m.Ad):</strong> @Model.Ad
</div>
<div class="mb-3">
    <strong>@Html.DisplayNameFor(m => m.Adress):</strong> @Model.Adress
</div>
<div class="mb-3">
    <strong>@Html.DisplayNameFor(m => m.Aciklama):</strong> @Model.Aciklama
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
</form>
