@model FitnessCenter.Web.Models.Entities.Hizmet

@{
    ViewData["Title"] = "Yeni Hizmet";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div>
            <h1>Yeni Hizmet</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Hizmetler</a></li>
                    <li class="breadcrumb-item active">Yeni Hizmet</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card-fc">
                <div class="card-header">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="me-2"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/></svg>
                    Hizmet Bilgileri
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert-fc alert-fc-danger mb-4"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-fc-group">
                                    <label asp-for="Ad" class="form-fc-label">Hizmet Adı</label>
                                    <input asp-for="Ad" class="form-fc-control" placeholder="Örn: Kişisel Antrenman" />
                                    <span asp-validation-for="Ad" class="form-fc-error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-fc-group">
                                    <label asp-for="SureDakika" class="form-fc-label">Sure (dk)</label>
                                    <input asp-for="SureDakika" class="form-fc-control" type="number" placeholder="60" />
                                    <span asp-validation-for="SureDakika" class="form-fc-error"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-fc-group">
                            <label asp-for="Aciklama" class="form-fc-label">Açıklama</label>
                            <textarea asp-for="Aciklama" class="form-fc-control" rows="3" placeholder="Hizmet hakkında kısa açıklama..."></textarea>
                            <span asp-validation-for="Aciklama" class="form-fc-error"></span>
                        </div>

                        <div class="d-flex gap-3 pt-3">
                            <button type="submit" class="btn-fc btn-fc-success">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/><polyline points="17 21 17 13 7 13 7 21"/><polyline points="7 3 7 8 15 8"/></svg>
                                Kaydet
                            </button>
                            <a asp-action="Index" class="btn-fc btn-fc-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
