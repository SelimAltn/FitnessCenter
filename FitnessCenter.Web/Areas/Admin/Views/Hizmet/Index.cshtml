@model IEnumerable<FitnessCenter.Web.Models.Entities.Hizmet>

@{
    ViewData["Title"] = "Hizmetler";
}

<!-- Toast Data -->
@if (TempData["Success"] != null)
{
    <div data-toast-message="@TempData["Success"]" data-toast-type="success" style="display:none;"></div>
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <div>
                <h1>Hizmetler</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
                        <li class="breadcrumb-item active">Hizmetler</li>
                    </ol>
                </nav>
            </div>
            <div class="page-header-actions">
                <a asp-action="Create" class="btn-fc btn-fc-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
                    Yeni Hizmet
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    @if (!Model.Any())
    {
        <div class="card-fc">
            <div class="card-body">
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"/><polyline points="14 2 14 8 20 8"/></svg>
                    </div>
                    <h3 class="empty-state-title">Henüz hizmet eklenmemiş</h3>
                    <p class="empty-state-text">Sunacağınız hizmetleri ekleyerek başlayın.</p>
                    <a asp-action="Create" class="btn-fc btn-fc-primary">Hizmet Ekle</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card-fc">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table-fc">
                        <thead>
                            <tr>
                                <th>Hizmet Adı</th>
                                <th>Süre</th>
                                <th>Ücret</th>
                                <th>Açıklama</th>
                                <th style="width: 180px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.Ad</strong></td>
                                    <td><span class="badge-fc badge-fc-secondary">@item.SureDakika dk</span></td>
                                    <td class="text-muted-fc">@(item.Aciklama?.Length > 40 ? item.Aciklama.Substring(0, 40) + "..." : item.Aciklama)</td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-fc btn-fc-secondary btn-fc-sm">Detay</a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-fc btn-fc-primary btn-fc-sm">Düzenle</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-fc btn-fc-danger btn-fc-sm">Sil</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>