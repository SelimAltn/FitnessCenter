@model IEnumerable<FitnessCenter.Web.Models.Entities.Musaitlik>

@{
    ViewData["Title"] = "Eğitmen Müsaitlikleri";
}

<h2>Eğitmen Müsaitlikleri</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Müsaitlik Ekle</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Eğitmen</th>
            <th>Gün</th>
            <th>Başlangıç</th>
            <th>Bitiş</th>
            <th style="width: 150px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Egitmen?.AdSoyad</td>
                <td>@item.Gun</td>
                <td>@item.BaslangicSaati</td>
                <td>@item.BitisSaati</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
