@model IEnumerable<FitnessCenter.Web.Models.Entities.Musaitlik>

@{
    ViewData["Title"] = "Eğitmen Müsaitlikleri";
}

<!-- Toast Data -->
@if (TempData["Success"] != null)
{
    <div data-toast-message="@TempData["Success"]" data-toast-type="success" style="display:none;"></div>
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <div>
                <h1>Eğitmen Müsaitlikleri</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
                        <li class="breadcrumb-item active">Müsaitlikler</li>
                    </ol>
                </nav>
            </div>
            <div class="page-header-actions">
                <a asp-action="Create" class="btn-fc btn-fc-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"/><line x1="5" y1="12" x2="19" y2="12"/></svg>
                    Yeni Müsaitlik
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    @if (!Model.Any())
    {
        <div class="card-fc">
            <div class="card-body">
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                    </div>
                    <h3 class="empty-state-title">Henüz müsaitlik tanımlanmamış</h3>
                    <p class="empty-state-text">Eğitmenlerin çalışma saatlerini tanımlayarak başlayın.</p>
                    <a asp-action="Create" class="btn-fc btn-fc-primary">Müsaitlik Ekle</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card-fc">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table-fc">
                        <thead>
                            <tr>
                                <th>Eğitmen</th>
                                <th>Gün</th>
                                <th>Saat Aralığı</th>
                                <th style="width: 180px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            <span class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 36px; height: 36px; background-color: var(--fc-warning-light);">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-warning-fc"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
                                            </span>
                                            <strong>@item.Egitmen?.AdSoyad</strong>
                                        </div>
                                    </td>
                                    <td><span class="badge-fc badge-fc-info">@item.Gun</span></td>
                                    <td>
                                        <span class="badge-fc badge-fc-secondary">
                                            @item.BaslangicSaati.ToString(@"hh\:mm") - @item.BitisSaati.ToString(@"hh\:mm")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-fc btn-fc-secondary btn-fc-sm">Detay</a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-fc btn-fc-primary btn-fc-sm">Düzenle</a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-fc btn-fc-danger btn-fc-sm">Sil</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
