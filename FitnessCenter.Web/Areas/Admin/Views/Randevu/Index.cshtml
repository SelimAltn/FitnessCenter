@model IEnumerable<FitnessCenter.Web.Models.Entities.Randevu>

@{
    ViewData["Title"] = "Randevu Listesi";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Randevular</h3>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus"></i> Yeni Randevu Oluştur
        </a>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Tarih/Saat</th>
                    <th>Üye</th>
                    <th>Eğitmen</th>
                    <th>Hizmet</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.BaslangicZamani.ToString("dd.MM.yyyy HH:mm")
                        </td>
                        <td>@item.Uye?.AdSoyad</td>
                        <td>@item.Egitmen?.AdSoyad</td>
                        <td>@item.Hizmet?.Ad</td>
                        <td>
                            @if (item.Durum == "Onaylandı")
                            {
                                <span class="badge bg-success">Onaylandı</span>
                            }
                            else if (item.Durum == "İptal")
                            {
                                <span class="badge bg-danger">İptal</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Beklemede</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-sm btn-info">Detay</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>