@model FitnessCenter.Web.Models.Entities.Randevu

@{
    ViewData["Title"] = "Randevu Detayı";
}

<h2>Randevu Detayı</h2>

<hr />

<dl class="row">
    <dt class="col-sm-2">Tarih</dt>
    <dd class="col-sm-10">@Model.BaslangicZamani.ToString("dd.MM.yyyy")</dd>

    <dt class="col-sm-2">Saat</dt>
    <dd class="col-sm-10">@Model.BaslangicZamani.ToString("HH:mm") - @Model.BitisZamani.ToString("HH:mm")</dd>

    <dt class="col-sm-2">Salon</dt>
    <dd class="col-sm-10">@Model.Salon?.Ad</dd>

    <dt class="col-sm-2">Hizmet</dt>
    <dd class="col-sm-10">@Model.Hizmet?.Ad</dd>

    <dt class="col-sm-2">Eğitmen</dt>
    <dd class="col-sm-10">@Model.Egitmen?.AdSoyad</dd>

    <dt class="col-sm-2">Üye</dt>
    <dd class="col-sm-10">@Model.Uye?.AdSoyad (@Model.Uye?.Email)</dd>

    <dt class="col-sm-2">Durum</dt>
    <dd class="col-sm-10">@Model.Durum</dd>

    @if (!string.IsNullOrWhiteSpace(Model.Notlar))
    {
        <dt class="col-sm-2">Notlar</dt>
        <dd class="col-sm-10">@Model.Notlar</dd>
    }
</dl>

<a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
