@model FitnessCenter.Web.Areas.Admin.Controllers.KullaniciDetayViewModel

@{
    ViewData["Title"] = $"Kullanıcı: {Model.KullaniciAdi}";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3">
            <div>
                <h1>@Model.KullaniciAdi</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index">Kullanıcılar</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Detay</li>
                    </ol>
                </nav>
            </div>
            <div>
                <a asp-action="Index" class="btn-fc btn-fc-outline-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"/><polyline points="12 19 5 12 12 5"/></svg>
                    Geri Dön
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row g-4">
        <!-- Kullanıcı Bilgileri -->
        <div class="col-lg-4">
            <div class="card-fc h-100">
                <div class="card-header">
                    <h5 class="mb-0">Hesap Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <span class="profile-avatar profile-avatar-lg d-inline-flex" style="width: 80px; height: 80px; font-size: 1.5rem;">
                            @(Model.KullaniciAdi.Length >= 2 ? Model.KullaniciAdi.Substring(0, 2).ToUpper() : Model.KullaniciAdi.ToUpper())
                        </span>
                    </div>
                    <dl class="mb-0">
                        <dt>Kullanıcı Adı</dt>
                        <dd>@Model.KullaniciAdi</dd>
                        
                        <dt>E-posta</dt>
                        <dd>@Model.Email</dd>
                        
                        <dt>Rol</dt>
                        <dd>
                            @if (Model.Rol == "Admin")
                            {
                                <span class="badge bg-danger">Admin</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Üye</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Üyelikler -->
        <div class="col-lg-8">
            <div class="card-fc h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Üyelikler</h5>
                    @if (Model.Uyelikler.Any())
                    {
                        <span class="badge bg-success">@Model.Uyelikler.Count üyelik</span>
                    }
                </div>
                <div class="card-body">
                    @if (!Model.Uyelikler.Any())
                    {
                        <div class="empty-state py-4">
                            <div class="empty-state-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
                            </div>
                            <h5 class="empty-state-title">Üyelik bulunamadı</h5>
                            <p class="empty-state-text text-muted">Bu kullanıcının henüz bir şubede üyeliği yok.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-fc mb-0">
                                <thead>
                                    <tr>
                                        <th>Şube</th>
                                        <th>Başlangıç</th>
                                        <th>Bitiş</th>
                                        <th>Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var uyelik in Model.Uyelikler)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@(uyelik.Salon?.Ad ?? "Şube")</strong>
                                            </td>
                                            <td>@uyelik.BaslangicTarihi.ToString("dd.MM.yyyy")</td>
                                            <td>
                                                @if (uyelik.BitisTarihi.HasValue)
                                                {
                                                    @uyelik.BitisTarihi.Value.ToString("dd.MM.yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (uyelik.Durum == "Aktif")
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Pasif</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
